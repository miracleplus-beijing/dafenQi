/* 漫游页面样式 - Frosted Paper Theme */

/* === 1. CSS变量系统 (Theme Variables) === */
page {
    /* --- 核心色板 --- */
    /* 背景色 - 纸张白 */
    --bg-paper: #Fdfbf7;
    
    /* 主题色 - 科技蓝 (0, 122, 255) 的变体 */
    --primary-blue: rgb(8, 132, 255);
    --primary-blue-light: rgba(8, 132, 255, 0.1);
    --primary-blue-glow: rgba(8, 132, 255, 0.3);
    
    /* 文字颜色 */
    --text-main: #1a1a1a;
    --text-secondary: #4a5568;
    --text-tertiary: #718096;
    --text-muted: #a0aec0;
    
    /* 装饰色 */
    --accent-orange: #ed8936;
    
    /* --- 布局尺寸 --- */
    --spacing-xs: 8rpx;
    --spacing-sm: 16rpx;
    --spacing-md: 24rpx;
    --spacing-lg: 32rpx;
    --spacing-xl: 48rpx;
    --spacing-2xl: 64rpx;
    
    /* --- 效果参数 --- */
    --blur-glass: 24px;
    --radius-panel: 32px;
    --radius-button: 999px;
    
    /* 基础设置 */
    background-color: var(--bg-paper);
    color: var(--text-main);
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
    box-sizing: border-box;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
}

/* === 2. 全局背景与纹理 (Background & Texture) === */
.browse-page-container {
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
    background-color: var(--bg-paper);
}

/* 纸张纹理和光斑已移除，保持简洁背景 */

/* === 3. 漫游页面主体 (Main Layout) === */
.browse-page {
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 1;
}

.swiper-mode {
    width: 100%;
    height: 100%;
}

.browse-swiper {
    width: 100%;
    height: 100%;
}

.browse-container {
    width: 100%;
    height: 100%;
    padding: calc(env(safe-area-inset-top) + 60rpx) 40rpx calc(env(safe-area-inset-bottom) + 40rpx);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
}

/* === 4. 封面区域 (Cover Section) === */
.cover-section {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 0; /* flex box scroll fix */
}

/* 封面光晕 */
.cover-glow {
    position: absolute;
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
    background: rgba(8, 132, 255, 0.3);
    filter: blur(60rpx);
    opacity: 0;
    transition: opacity 1s ease;
}

.cover-glow.playing {
    opacity: 1;
    animation: pulseGlowBlue 4s infinite ease-in-out;
}

@keyframes pulseGlowBlue {
    0%, 100% { box-shadow: 0 0 60rpx 20rpx rgba(8, 132, 255, 0.2); }
    50% { box-shadow: 0 0 120rpx 50rpx rgba(8, 132, 255, 0.4); }
}

/* 圆形封面容器 */
.podcast-cover-circle {
    width: 380rpx;
    height: 380rpx;
    border-radius: 50%;
    border: 8rpx solid rgba(255, 255, 255, 0.5); /* 边框稍微减细，颜色加亮 */
    box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.08), inset 0 0 0 2rpx rgba(255, 255, 255, 0.3);
    position: relative;
    overflow: hidden;
    background: #f0f0f0;
    /* 旋转动画基础设置 */
    animation: rotateDisk 20s linear infinite;
    animation-play-state: paused;
}

.podcast-cover-circle.rotating {
    animation-play-state: running;
}

@keyframes rotateDisk {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.cover-image-circle {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.cover-placeholder-circle {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #cbd5e0, #a0aec0);
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 播放按钮覆盖层 */
.play-overlay-circle {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(4px);
    opacity: 1;
    transition: opacity 0.3s;
    /* 反向旋转以保持图标正立 */
    animation: counterRotate 20s linear infinite;
    animation-play-state: inherit; /* 跟随父元素暂停/播放 */
}

.play-overlay-circle.hidden {
    opacity: 0;
    pointer-events: none;
}

@keyframes counterRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(-360deg); }
}

/* === 5. 信息面板 (Frosted Paper Panel) === */
.info-panel {
    margin-top: 40rpx;
    padding: 40rpx 32rpx;
    border-radius: var(--radius-panel);
    display: flex;
    flex-direction: column;
    gap: 32rpx;
}

/* 磨砂纸感效果核心 */
.frosted-paper {
    background-color: rgba(253, 251, 247, 0.75);
    backdrop-filter: blur(24px);
    border: 1px solid rgba(8, 132, 255, 0.1);
    box-shadow: 
        0 24rpx 80rpx -16rpx rgba(8, 132, 255, 0.15),
        inset 0 0 0 1px rgba(255, 255, 255, 0.6);
}

/* 标题区域 */
.text-center-section {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 16rpx;
    align-items: center;
}

.main-title {
    font-family: 'Times New Roman', serif; /* 模拟 Playfair Display */
    font-size: 40rpx;
    font-weight: 700;
    color: var(--text-main);
    line-height: 1.2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.font-serif-display {
    font-family: 'Times New Roman', serif;
    font-weight: bold;
}

.meta-info {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.theme-dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: var(--primary-blue);
    box-shadow: 0 0 8rpx rgba(8, 132, 255, 0.5);
}

.channel-name {
    font-size: 24rpx;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 2rpx;
    font-weight: 500;
}

.summary-link {
    border-bottom: 1px dashed #ccc;
    padding-bottom: 4rpx;
}

.summary-text {
    font-size: 26rpx;
    color: var(--text-secondary);
    opacity: 0.8;
    line-height: 1.5;
    text-align: center;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

/* === 6. 控制区域 (Controls) === */
.controls-section {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

/* 时间 */
.time-info {
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
    font-family: monospace;
    color: var(--text-tertiary);
    padding: 0 8rpx;
}

.current-time {
    color: var(--primary-blue);
    font-weight: 600;
}

/* 波形进度条 */
.waveform-progress-bar {
    width: 100%;
    height: 80rpx;
    position: relative;
    /* background: rgba(0,0,0,0.02); */
    display: flex;
    align-items: center;
}

.waveform-strip {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    gap: 6rpx;
}

.wave-bar {
    flex: 1;
    background-color: #cbd5e0; /* 默认灰色 */
    border-radius: 4rpx;
    transition: all 0.2s ease;
    min-width: 6rpx;
}

.wave-bar.played {
    background-color: var(--primary-blue); /* 播放过为蓝色 */
    opacity: 0.6;
}

.wave-bar.active {
    background-color: var(--primary-blue);
    opacity: 1;
    box-shadow: 0 0 10rpx rgba(8, 132, 255, 0.5);
    animation: waveScale 1s ease-in-out infinite;
}

@keyframes waveScale {
    0%, 100% { transform: scaleY(1); }
    50% { transform: scaleY(1.4); }
}

/* 操作栏 */
.action-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 16rpx;
    margin-top: 16rpx;
}

.icon-btn {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s;
}

.icon-btn:active {
    background-color: rgba(0,0,0,0.05);
}

.share-btn {
    margin: 0;
    padding: 0;
    background: transparent;
    border: none;
    line-height: 1;
}
.share-btn::after { border: none; }

/* 主播放按钮 */
.main-play-btn {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 16rpx 40rpx rgba(8, 132, 255, 0.4);
    transition: transform 0.2s;
}

.main-play-btn:active {
    transform: scale(0.95);
}

.play-btn-bg {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-blue), #005BB5);
}

/* === 7. 阅读模式 (Reading Mode) === */
.reading-mode-overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    background-color: var(--bg-paper);
    /* 纸张噪点叠加 */
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100' height='100' filter='url(%23noise)' opacity='0.05'/%3E%3C/svg%3E");
    transform: translateY(100%);
    transition: transform 0.5s cubic-bezier(0.32, 0.72, 0, 1);
    display: flex;
    flex-direction: column;
}

.reading-mode-overlay.active {
    transform: translateY(0);
}

.reading-header {
    padding: calc(env(safe-area-inset-top) + 20rpx) 32rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(253, 251, 247, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0,0,0,0.05);
    z-index: 10;
}

.reading-close-btn,
.reading-share-btn {
    width: 72rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s;
}

.reading-share-btn {
    margin: 0;
    padding: 0;
    background: transparent;
    border: none;
    line-height: 1;
}

.reading-share-btn::after {
    border: none;
}

.reading-close-btn:active,
.reading-share-btn:active {
    background-color: rgba(0,0,0,0.05);
}

.reading-mode-title {
    font-size: 32rpx;
    color: var(--primary-blue);
    font-style: italic;
}

.reading-content-scroll {
    flex: 1;
    width: 100%;
    height: 0; /* 触发 flex 高度计算 */
    overflow-y: auto;
}

.reading-content-wrapper {
    padding: 60rpx 40rpx;
}

.reading-title {
    font-size: 56rpx;
    line-height: 1.2;
    color: #1a1a1a;
    margin-bottom: 32rpx;
    display: block;
}

.reading-meta {
    display: flex;
    align-items: center;
    gap: 16rpx;
    margin-bottom: 48rpx;
    padding-bottom: 32rpx;
    border-bottom: 1px solid rgba(0,0,0,0.05);
}

.theme-dot-small {
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background-color: var(--primary-blue);
}

.reading-channel {
    font-size: 26rpx;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.reading-text {
    font-family: 'Georgia', serif;
    font-size: 34rpx;
    line-height: 1.8;
    color: #333;
    text-align: justify;
}

.reading-footer-spacer {
    height: 200rpx;
}

/* 底部迷你播放条 */
.reading-playback-bar {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 24rpx 32rpx calc(env(safe-area-inset-bottom) + 24rpx);
    display: flex;
    align-items: center;
    gap: 24rpx;
    z-index: 20;
    border-top: 1px solid rgba(0,0,0,0.05);
}

.frosted-paper-bottom {
    background-color: rgba(253, 251, 247, 0.85);
    backdrop-filter: blur(20px);
}

.mini-cover-img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #eee;
}

.mini-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
}

.mini-title {
    font-size: 28rpx;
    font-weight: 600;
    color: var(--text-main);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.mini-status {
    font-size: 20rpx;
    color: var(--primary-blue);
    font-weight: bold;
    letter-spacing: 1px;
    margin-top: 4rpx;
}

.mini-controls {
    display: flex;
    align-items: center;
    gap: 32rpx;
}

/* === 8. 其他组件 (Popups & Loading) === */
.more-popup {
    position: fixed;
    inset: 0;
    z-index: 2000;
    visibility: hidden;
    transition: visibility 0.3s;
}
.more-popup.show { visibility: visible; }

.popup-mask {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.4);
    opacity: 0;
    transition: opacity 0.3s;
}
.more-popup.show .popup-mask { opacity: 1; }

.popup-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.2, 0.9, 0.3, 1);
    border-radius: 40rpx 40rpx 0 0;
    padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
}
.more-popup.show .popup-content { transform: translateY(0); }

.frosted-paper-popup {
    background-color: #Fdfbf7;
    box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.1);
}

.popup-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx 40rpx;
    border-bottom: 1px solid rgba(0,0,0,0.05);
}

.popup-title {
    font-size: 32rpx;
    font-weight: 600;
}

.more-actions-list {
    padding: 20rpx 0;
}

.more-action-item {
    display: flex;
    align-items: center;
    padding: 32rpx 48rpx;
    gap: 24rpx;
}
.more-action-item:active { background-color: rgba(0,0,0,0.03); }

/* 加载指示器 */
.loading-indicator, .no-data-indicator {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--text-tertiary);
    font-size: 24rpx;
}

.loading-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 16rpx;
    animation: spin 1s linear infinite;
}

@keyframes spin { 100% { transform: rotate(360deg); } }

.custom-audio-loading {
    position: fixed;
    inset: 0;
    z-index: 3000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.loading-overlay {
    position: absolute;
    inset: 0;
    background: rgba(255,255,255,0.4);
}

.loading-content.frosted-glass {
    background: rgba(255,255,255,0.8);
    backdrop-filter: blur(10px);
    padding: 40rpx;
    border-radius: 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.custom-loading-icon {
    width: 60rpx;
    height: 60rpx;
    animation: spin 1s linear infinite;
    margin-bottom: 16rpx;
}

/* 瀑布流容器适配 */
.waterfall-mode {
    width: 100%;
    height: 100%;
    padding-top: calc(env(safe-area-inset-top) + 20rpx);
}

/* === 9. 工具类 (Utility Classes) === */
.h-full {
    height: 100%;
}

.relative {
    position: relative;
}

.z-10 {
    z-index: 10;
}

.shadow-glow {
    box-shadow: 0 0 20rpx rgba(8, 132, 255, 0.4);
}
