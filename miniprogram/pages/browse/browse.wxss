/* progress-bar区域 */
.progress-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 16px;
  margin: 20px 0;
}

.progress-time-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
  font-size: 12px;
  color: #666;
}

.current-time,
.total-time {
  font-family: 'Times New Roman', 'SF Pro', serif;
  font-weight: 400;
  line-height: 1;
}

.progress-bar {
  width: 100%;
  height: 6px;
  background: var(--Fills-Primary, rgba(120, 120, 120, 0.20));
  border-radius: 3px;
  position: relative;
}

.progress-buffer {
  height: 6px;
  background: rgba(8, 132, 255, 0.3);
  border-radius: 3px;
  position: absolute;
  top: 0;
  left: 0;
  transition: width 0.5s ease;
  z-index: 1;
  overflow: hidden;
}

.progress-fill {
  height: 6px;
  background: #0884FF;
  border-radius: 3px;
  position: absolute;
  top: 0;
  left: 0;
  transition: width 0.3s ease;
  z-index: 2;
  overflow: hidden;
}

.progress-thumb {
  width: 16px;
  height: 16px;
  background: #0884FF;
  border-radius: 50%;
  position: absolute;
  top: -5px;
  transform: translateX(-8px);
  opacity: 1;
  transition: opacity 0.2s ease, background 0.2s ease;
  box-shadow: 0 2px 6px rgba(8, 132, 255, 0.3);
  z-index: 3;
}

/* 拖拽时移除transform过渡，提升响应速度 */
.progress-thumb.dragging {
  transition: opacity 0.2s ease, background 0.2s ease;
}

.progress-thumb:active {
  transform: translateX(-8px) scale(1.2);
  background: #0666CC;
  box-shadow: 0 3px 8px rgba(8, 132, 255, 0.5);
}

.progress-bar:active .progress-thumb {
  opacity: 1;
  transform: translateX(-8px) scale(1.1);
}

/* 播放控制区域 */
.playback-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 37px;
  width: 100%;
  margin: 20px 0;
}

/* === 智能分块缓冲进度条样式增强 === */

/* 网络状态指示器 */
.network-indicator {
  display: flex;
  align-items: center;
  padding: 2px 6px;
  border-radius: 8px;
  font-size: 10px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.network-indicator.fast {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
}

.network-indicator.slow {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

/* 背景轨道 */
.progress-track {
  width: 100%;
  height: 6px;
  background: var(--Fills-Primary, rgba(120, 120, 120, 0.20));
  border-radius: 3px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

/* 分块缓冲显示层 */
.chunk-buffer-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 6px;
  z-index: 1;
}

.chunk-segment {
  position: absolute;
  height: 6px;
  top: 0;
  background: transparent;
  transition: all 0.3s ease;
  border-radius: 1px;
}

/* 已缓存的分块 */
.chunk-segment.cached {
  background: rgba(8, 132, 255, 0.4);
  box-shadow: inset 0 0 2px rgba(8, 132, 255, 0.6);
}

/* 正在加载的分块 */
.chunk-segment.loading {
  background: linear-gradient(
    90deg,
    rgba(8, 132, 255, 0.2) 0%,
    rgba(8, 132, 255, 0.5) 50%,
    rgba(8, 132, 255, 0.2) 100%
  );
  background-size: 200% 100%;
  animation: loading-shimmer 1.5s infinite;
}

@keyframes loading-shimmer {
  0% {
    background-position: -100% 0;
  }
  100% {
    background-position: 100% 0;
  }
}

/* 传统缓冲进度条(备选) */
.progress-buffer.hidden {
  opacity: 0;
  pointer-events: none;
}

/* 增强播放进度条 */
.progress-fill {
  background: linear-gradient(90deg, #0884FF 0%, #06b6d4 100%);
  box-shadow: 0 0 4px rgba(8, 132, 255, 0.4);
}


/* 响应式调整 */
@media (max-width: 375px) {
  .network-indicator {
    padding: 1px 4px;
  }
}

