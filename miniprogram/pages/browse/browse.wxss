/* 漫游页面样式 */
.browse-page {
  width: 100%;
  height: 100vh;
  background: white;
  position: relative;
  overflow: hidden;
}


.loading-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}


.browse-swiper {
  width: 100%;
  height: 100vh; /* 减去推荐区域高度 */
  background: white;
}

.browse-container {
  width: 100%;
  height: 100vh;
  background: white;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  user-select: none;
}

/* 播客封面区域 */
.podcast-cover {
  width: 240px;
  height: 240px;
  background: var(--Fills-Secondary, rgba(120, 120, 128, 0.16));
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-bottom: 24px;
  position: relative;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
  padding: 20px;
  box-sizing: border-box;
}

.cover-icon {
  font-size: 48px;
  margin-bottom: 12px;
}

.cover-title {
  font-size: 14px;
  font-weight: 500;
  line-height: 1.3;
  opacity: 0.9;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* Loader放置在播客封面正中心 */
.podcast-loader {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60px;
  height: 60px;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}

.loader-icon {
  width: 30px;
  height: 30px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 播客标题区域 */
.podcast-title-wrapper {
  width: calc(100% - 18px);
  max-width: 360px;
  margin-bottom: 12px;
  flex-shrink: 0;
}

.title-scroll-view {
  width: 100%;
  white-space: nowrap;
}

.title-scroll-view.auto-scrolling .title-content {
  animation: slowScrollLeft 10s linear infinite;
}

@keyframes slowScrollLeft {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

.title-content {
  display: inline-block;
  min-width: 100%;
}

.title-text {
  color: #000000;
  font-size: 17px;
  font-weight: 400;
  word-wrap: break-word;
}

/* 认知卡片容器 */
.insight-cards-container {
  width: 324px;
  height: 140px;
  margin-bottom: 16px;
  flex-shrink: 0;
  position: relative;
}

.insight-header {
  position: relative;
  left: 16px;
  top: 13px;
  display: flex;
  align-items: center;
  gap: 8px;
  z-index: 1;
}

.insight-label {
