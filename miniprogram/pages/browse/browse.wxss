/* 触摸反馈 */
.touch-feedback {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1000;
}

.swipe-indicator {
  position: absolute;
  top: 50%;
  width: 4px;
  height: 60px;
  background: rgba(8, 132, 255, 0.6);
  border-radius: 2px;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.swipe-indicator.left {
  left: 10px;
}

.swipe-indicator.right {
  right: 10px;
}

.swipe-indicator.active {
  opacity: 1;
}

/* 页面切换动画 */
.page-transition {
  transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), opacity 0.3s ease;
}

.page-slide-left {
  transform: translateX(-100%);
  opacity: 0;
}

.page-slide-right {
  transform: translateX(100%);
  opacity: 0;
}

.page-slide-in {
  transform: translateX(0);
  opacity: 1;
}

