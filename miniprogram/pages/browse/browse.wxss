/* 漫游页面样式 - 简约博客美学重设计 */

/* === CSS变量系统 === */
page {
    /* 主色调 - 深海蓝 */
    --primary-color: #1a365d;
    --primary-light: #2c5282;
    --primary-dark: #1a202c;

    /* 辅助色 - 雾蓝 */
    --secondary-color: #e2e8f0;
    --secondary-light: #f7fafc;
    --secondary-dark: #cbd5e0;

    /* 强调色 - 暖橙 */
    --accent-color: #ed8936;
    --accent-light: #f6ad55;
    --accent-dark: #c05621;

    /* 背景色 */
    --bg-primary: #ffffff;
    --bg-secondary: #f7fafc;
    --bg-tertiary: #edf2f7;

    /* 文字色 */
    --text-primary: #2d3748;
    --text-secondary: #718096;
    --text-tertiary: #a0aec0;
    --text-muted: #e2e8f0;

    /* 字体层次 */
    --font-size-xl: 20px;
    --font-size-lg: 16px;
    --font-size-md: 14px;
    --font-size-sm: 12px;
    --font-size-xs: 10px;
    --font-color-primary: #0883fd;

    /* 字重 */
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    /* 间距系统 */
    --spacing-xs: 8rpx;
    --spacing-sm: 16rpx;
    --spacing-md: 32rpx;
    --spacing-lg: 48rpx;
    --spacing-xl: 64rpx;
    --spacing-2xl: 96rpx;
    --spacing-3xl: 128rpx;
    --spacing-4xl: 160rpx;

    /* 圆角系统 */
    --border-radius-sm: 8rpx;
    --border-radius-md: 16rpx;
    --border-radius-lg: 24rpx;
    --border-radius-xl: 32rpx;
    --border-radius-full: 50%;

    /* 阴影系统 */
    --shadow-sm: 0 1px 3px rgba(26, 54, 93, 0.1);
    --shadow-md: 0 4px 12px rgba(26, 54, 93, 0.15);
    --shadow-lg: 0 8px 25px rgba(26, 54, 93, 0.15);

    --shadow-xl: 0 12px 35px rgba(26, 54, 93, 0.2);

    /* 动画参数 */
    --animation-duration: 0.3s;
    --animation-timing: cubic-bezier(0.25, 0.1, 0.25, 1);
}

.browse-page {
    width: 100%;
    height: 100vh;
    background: var(--bg-primary);
    position: relative;
    overflow: hidden;
}

/* === 模式切换动画 === */
.swiper-mode {
    opacity: 1;
    transform: translateX(0);
    transition: all var(--animation-duration) var(--animation-timing);
}

.swiper-mode.hiding {
    opacity: 0;
    transform: translateX(-100%);
}

.waterfall-mode {
    opacity: 1;
    transform: translateX(0);
    transition: all var(--animation-duration) var(--animation-timing);
}

.waterfall-mode.hiding {
    opacity: 0;
    transform: translateX(100%);
}


/* === 全局布局 === */
.browse-swiper {
    width: 100%;
    height: 100vh;
    background: var(--bg-primary);
}

.browse-container {
    width: 100%;
    background: var(--bg-primary);
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    user-select: none;
    padding: var(--spacing-lg) 0;
    height: 100vh;
    box-sizing: border-box;

    /* 页面切换动画 */
    animation: slideInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1);
}

@keyframes slideInUp {
    from {
        transform: translateY(20px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* === 内容展示区域 === */
.content-display {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50rpx;
    justify-content: center;
    max-width: 800rpx;
    margin: 0 auto;
}

/* === 播客封面组件 === */
.podcast-cover {
    border: 1px solid rgba(226, 232, 240, 0.6);
    overflow: hidden;
    position: relative;
    margin: 0 50rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 24rpx;
    width: 400rpx;
  background-color: #f0f4f8;
  border: none;
  border-radius: 20rpx;
}

.cover-image-container {
    position: relative;
    width: 400rpx;
    height: 400rpx;
    border-radius: 16rpx;
    overflow: hidden;
}

.cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.podcast-cover.playing .cover-image {
    transform: scale(1.05);
}

/* 暂停遮罩效果 */
.pause-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(4rpx);
    -webkit-backdrop-filter: blur(4rpx);
    animation: fadeIn 0.3s ease-in-out;
    z-index: 10;
}

.pause-icon {
    color: white;
    opacity: 0.9;
    filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* 淡入动画 */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: scale(0.9);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

.cover-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
    color: white;
    text-align: center;
    padding: var(--spacing-lg);
    box-sizing: border-box;
}

.cover-icon {
    font-size: 48px;
    margin-bottom: var(--spacing-sm);
}

.cover-title {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
    line-height: 1.3;
    opacity: 0.9;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

/* 播放状态覆盖层 */
.play-overlay {
    width: 100%;
    height: 100%;
    background: rgba(26, 54, 93, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.overlay-icon {
    width: 32px;
    height: 32px;
    color: white;
}

/* 加载指示器 */
.podcast-loader {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
}

.loader-icon {
    width: 30px;
    height: 30px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

/* === 横向操作栏 === */
.horizontal-actions {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40rpx;
    width: 100%;
    align-self: flex-end;
    margin: -20rpx auto;
    padding: 16rpx 0;
}

.horizontal-action-btn {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    background: var(--bg-secondary);
    border: 1px solid var(--secondary-color);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
    box-shadow: var(--shadow-sm);
    position: relative;
    overflow: hidden;
    padding: 4rpx;
}

.horizontal-action-btn:active {
    transform: translateY(2rpx) scale(0.95);
    box-shadow: 0 2rpx 8rpx rgba(26, 54, 93, 0.1);
}

.horizontal-action-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(237, 137, 54, 0.1);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.4s ease;
}

.horizontal-action-btn:active::before {
    width: 80rpx;
    height: 80rpx;
}

.horizontal-action-icon {
    width: 32rpx;
    height: 32rpx;
    color: var(--text-secondary);
    transition: all 0.2s ease;
    z-index: 1;
}

.horizontal-action-btn:hover .horizontal-action-icon {
    color: var(--accent-color);
    transform: scale(1.1);
}

.horizontal-action-btn.favorited {
    background: rgba(237, 137, 54, 0.1);
    border-color: var(--accent-color);
}

.horizontal-action-btn.favorited .horizontal-action-icon {
    color: var(--accent-color);
    transform: scale(1.05);
}

/* === 标题组件 === */
.title-section {
    width: 100%;
    max-width: 640rpx;
    margin: 0 auto;
    padding: 0 48rpx;
    text-align: center;
}

.main-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-medium);
    color: var(--text-primary);
    line-height: 1.2;
    margin-bottom: var(--spacing-xs);
    display: block;

    /* 单行省略 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.sub-title {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-normal);
    color: var(--text-secondary);
    line-height: 1.5;
    display: block;
}

/* === 内容摘要组件 === */
.content-summary {
    width: 100%;
    max-width: 680rpx;
    margin: 0 auto 24rpx;
    padding: 32rpx 48rpx;
    background: var(--bg-secondary);
    border: 1px solid var(--secondary-color);
    border-radius: var(--border-radius-lg);
    position: relative;
}

.summary-label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--accent-color);
    margin-bottom: var(--spacing-sm);
    display: flex;
    align-items: center;
    gap: 6px;
}

.summary-icon {
    width: 16px;
    height: 16px;
}

.summary-text {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-normal);
    color: var(--text-primary);
    line-height: 1.6;

    /* 3行截断 */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

/* === 播放控制区域 === */
.playback-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 800rpx;
    margin-top: 30rpx;
    gap: 50rpx;
    justify-content: space-between;
}

/* === 进度控制组件 === */
.progress-section {
    width: 100%;
    padding: 0 48rpx;
}

.time-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    font-family: 'SF Pro Display', -apple-system, sans-serif;
}

.current-time,
.total-time {
    font-weight: var(--font-weight-normal);
    line-height: 1;
}

.progress-container {
    position: relative;
    height: 20px;
    display: flex;
    align-items: center;
    align-self: center;
}

/* === Slider 组件自定义样式 === */
.custom-slider {
    width: 100%;
    height: 20px;
}

/* 自定义 Slider 轨道颜色和高度 */
.custom-slider .t-slider__track {
    height: 4px !important;
    background: var(--secondary-color) !important;
    border-radius: 2px !important;
}

/* 自定义 Slider 已填充部分的样式 */
.custom-slider .t-slider__fill {
    height: 4px !important;
    background: linear-gradient(90deg, var(--primary-color) 0%, var(--accent-color) 100%) !important;
    border-radius: 2px !important;
    box-shadow: 0 0 8px rgba(237, 137, 54, 0.3) !important;
}

/* 自定义 Slider 滑块样式 */
.custom-slider .t-slider__handle {
    width: 14px !important;
    height: 14px !important;
    background: var(--primary-color) !important;
    border: 2px solid var(--bg-primary) !important;
    border-radius: 50% !important;
    box-shadow: var(--shadow-md) !important;
    opacity: 0 !important;
    transition: all 0.2s ease !important;
}

/* 鼠标悬停或拖拽时显示滑块 */
.custom-slider:hover .t-slider__handle,
.custom-slider .t-slider__handle.t-slider__handle--dragging {
    opacity: 1 !important;
    transform: scale(1.2) !important;
}

/* 拖拽时的滑块样式 */
.custom-slider .t-slider__handle:active,
.custom-slider .t-slider__handle.t-slider__handle--dragging {
    transform: scale(1.4) !important;
    background: var(--primary-light) !important;
}

/* === 播放控制按钮 === */
.playback-controls {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    margin: 32rpx 40rpx;
}

.control-btn {
    width: var(--spacing-2xl);
    height: var(--spacing-2xl);
    border-radius: 50%;
    background: var(--bg-secondary);
    border: 1px solid var(--secondary-color);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.control-btn:active {
    transform: translateY(0);
    box-shadow: var(--shadow-sm);
}
/* 播放按钮特殊样式 */
.play-btn {
  width: var(--spacing-3xl);
  height: var(--spacing-3xl);
  border-radius: 50%;
  border: none;
  box-shadow: var(--shadow-lg);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}


.play-btn:active::before {
  width: 100px;
  height: 100px;
}


.play-icon {
    color: var(--font-color-primary);
    scale: 1.2;
}
.control-icon {
    color: var(--font-color-primary);
}



.speed-display {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    padding: var(--spacing-xs) var(--spacing-sm);
}

/* 更多操作按钮 */
.more-icon {
    font-size: 18px;
    color: var(--text-secondary);
    font-weight: bold;
}

/* === 响应式设计 === */
@media (max-width: 376px) {

    .horizontal-actions {
        gap: 60rpx;
    }

    .horizontal-action-btn {
        width: 48rpx;
        height: 48rpx;
    }

    .horizontal-action-icon {
        width: 28rpx;
        height: 28rpx;
    }

    .title-section {
        padding: 0 32rpx;
    }

    .content-summary {
        max-width: 560rpx;
        padding: 24rpx 32rpx;
        margin-bottom: 16rpx;
    }

    .playback-controls {
        gap: 48rpx;
        margin: 24rpx 30rpx;
    }



    .play-btn {
        width: 88rpx;
        height: 88rpx;
        border-radius: 50%;
        padding: 26rpx;
        padding-left: 28rpx;
        padding-right: 22rpx;
    }

    .progress-section {
        padding: 0 32rpx;
    }
    .summary-text {
        font-size: var(--font-size-md);
        font-weight: var(--font-weight-normal);
        color: var(--text-primary);
        line-height: 1.6;

        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

}

@media (min-width: 376px) and (max-width: 414px) {
    .podcast-cover {
        margin-bottom: 40rpx;
    }

    .horizontal-actions {
        gap: 30rpx;
    }

    .content-summary {
        max-width: 640rpx;
        padding: 28rpx 40rpx;
    }
}

@media (min-width: 768px) {
    .browse-container {
        max-width: 480px;
        margin: 0 auto;
        padding: var(--spacing-md) 0;
    }
}

/* === 通用样式 === */
.loading-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
    animation: spin 1s linear infinite;
}

/* === 加载指示器 === */
.loading-indicator {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
    z-index: 1000;
}

.loading-indicator .loading-icon {
    width: 40px;
    height: 40px;
    margin-bottom: var(--spacing-md);
    margin-right: 0;
}

.loading-indicator text {
    color: var(--text-secondary);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-normal);
}

/* 无数据指示器 */
.no-data-indicator {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.no-data-indicator text {
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-normal);
}

/* 自定义音频加载指示器 */
.custom-audio-loading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(26, 54, 93, 0.2);
}

.loading-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.98);
    padding: var(--spacing-2xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-xl);
    backdrop-filter: blur(10px);
}

.custom-loading-icon {
    width: 48px;
    height: 48px;
    margin-bottom: var(--spacing-md);
    animation: spin 1s linear infinite;
}

.loading-text {
    color: var(--text-primary);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
    text-align: center;
}

/* === 瀑布流模式样式 === */
.waterfall-mode {
  width: 100%;
  height: 100vh;
  background: var(--bg-primary);
  display: flex;
  flex-direction: column;
  opacity: 1;
  transform: translateX(0);
  transition: all var(--animation-duration) var(--animation-timing);
}

.waterfall-mode.hiding {
  opacity: 0;
  transform: translateX(100%);
}

/* === 性能优化样式 === */
.waterfall-content {
  flex: 1;
  height: 0;
  /* padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); */
  /* 启用硬件加速 */
  transform: translateZ(0);
  -webkit-overflow-scrolling: touch;
  /* 优化滚动性能 */
  will-change: scroll-position;
  /* 下拉刷新优化 */
  overscroll-behavior: contain;
}

.waterfall-grid {
  display: flex;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
  /* 性能优化 */
  contain: layout style;
}

.grid-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  /* 启用复合图层 */
  transform: translateZ(0);
  will-change: contents;
}

/* === 卡片进入动画 === */
.waterfall-card {
  opacity: 0;
  transform: translateY(30rpx) scale(0.9);
  animation: cardFadeIn 0.4s var(--animation-timing) forwards;
}

.waterfall-card:nth-child(even) {
  animation-delay: 0.1s;
}

.waterfall-card:nth-child(odd) {
  animation-delay: 0.05s;
}

@keyframes cardFadeIn {
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* === 瀑布流头部动画 === */
.waterfall-header {
  opacity: 0;
  transform: translateY(-20rpx);
  animation: headerSlideDown 0.3s var(--animation-timing) forwards;
}

@keyframes headerSlideDown {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* === 切换按钮动画效果 === */
.tab-switch-indicator {
  position: fixed;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  right: var(--spacing-lg);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--accent-color), var(--accent-light));
  box-shadow: var(--shadow-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  opacity: 0;
  transform: scale(0.8) rotate(-90deg);
  transition: all var(--animation-duration) var(--animation-timing);
  pointer-events: none;
}

.tab-switch-indicator.show {
  opacity: 1;
  transform: scale(1) rotate(0deg);
  pointer-events: all;
}

.tab-switch-indicator.pulse {
  animation: switchPulse 0.6s ease-in-out;
}

@keyframes switchPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

/* 加载状态 */
.waterfall-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-lg);
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

.no-more-data {
  text-align: center;
  padding: var(--spacing-lg);
  color: var(--text-tertiary);
  font-size: var(--font-size-sm);
}

/* 空数据状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-4xl) var(--spacing-lg);
  color: var(--text-tertiary);
  text-align: center;
}

.empty-text {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  margin: var(--spacing-md) 0 var(--spacing-sm);
}

.empty-hint {
  font-size: var(--font-size-sm);
  opacity: 0.7;
}

/* 临时内容 - 保留原有的简单布局作为后备 */
.temp-waterfall-content {
  padding: var(--spacing-lg);
  text-align: center;
  color: var(--text-secondary);
  font-size: var(--font-size-lg);
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: var(--spacing-md);
}

.grid-item {
  background: var(--bg-secondary);
  border-radius: var(--border-radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: transform 0.2s ease;
}

.grid-item:active {
  transform: scale(0.98);
}

.item-cover {
  width: 100%;
  height: 200rpx;
  border-radius: var(--border-radius-md) var(--border-radius-md) 0 0;
}

.item-title {
  padding: var(--spacing-sm);
  font-size: var(--font-size-md);
  color: var(--text-primary);
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* === 更多操作弹窗样式 === */
.more-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s ease;
}

.more-popup.show {
    visibility: visible;
    opacity: 1;
}

.more-popup-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    background: var(--bg-primary);
    border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
    box-shadow: var(--shadow-xl);
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
}

.more-popup.show .more-popup-content {
    transform: translateY(0);
}

.more-actions-list {
    padding: var(--spacing-md) 0 var(--spacing-lg);
}

.more-action-item {
    display: flex;
    align-items: center;
    padding: var(--spacing-md) var(--spacing-lg);
    transition: background-color 0.2s ease;
}

.more-action-item:active {
    background-color: var(--bg-secondary);
}

.action-icon {
    margin-right: var(--spacing-md);
}

.action-text {
    color: var(--text-primary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
}

/* === 评论弹窗样式 === */
.comment-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.3s ease, visibility 0.3s ease;
}

.comment-popup.show {
    visibility: visible;
    opacity: 1;
}

.popup-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(26, 54, 93, 0.4);
    backdrop-filter: blur(4px);
}

.popup-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 70%;
    background: var(--bg-primary);
    border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
    display: flex;
    flex-direction: column;
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
    box-shadow: var(--shadow-xl);
}

.comment-popup.show .popup-content {
    transform: translateY(0);
}

.popup-header {
    height: 60px;
    padding: 0 var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--secondary-color);
    background: var(--bg-primary);
}

.popup-title {
    color: var(--text-primary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
}

.popup-close {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--border-radius-md);
    transition: background 0.2s ease;
}

.close-icon {
    width: 20px;
    height: 20px;
    color: var(--text-secondary);
}

/* === 评论列表样式 === */
.comment-list {
    flex: 1;
    padding: var(--spacing-md) var(--spacing-lg);
    overflow-y: auto;
    background: var(--bg-primary);
}

.comment-item {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
    padding: var(--spacing-md);
    border-radius: var(--border-radius-md);
    transition: background 0.2s ease;
}

.comment-avatar {
    width: 36px;
    height: 36px;
    border-radius: var(--border-radius-full);
    flex-shrink: 0;
    object-fit: cover;
    border: 1px solid var(--secondary-color);
}

.comment-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.comment-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.comment-user {
    color: var(--text-primary);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
}

.comment-time {
    color: var(--text-tertiary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-normal);
}

.comment-text {
    color: var(--text-primary);
    font-size: var(--font-size-md);
    line-height: 1.5;
    word-wrap: break-word;
}

.comment-actions {
    display: flex;
    gap: var(--spacing-lg);
    margin-top: var(--spacing-xs);
}



.comment-empty {
    width: 100%;
    padding: var(--spacing-2xl) 0;
    text-align: center;
    color: var(--text-tertiary);
    font-size: var(--font-size-md);
}

/* === 评论输入框样式 === */
.comment-input-wrapper {
    height: 80px;
    padding: var(--spacing-md) var(--spacing-lg);
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    border-top: 1px solid var(--secondary-color);
    box-sizing: border-box;
}

.comment-input {
    flex: 1;
    height: 44px;
    background: var(--bg-primary);
    border-radius: 22px;
    padding: 0 var(--spacing-md);
    font-size: var(--font-size-md);
    border: 1px solid var(--secondary-color);
    color: var(--text-primary);
    transition: border-color 0.2s ease;
}

.comment-input:focus {
    border-color: var(--accent-color);
    outline: none;
}

.send-btn {
    width: 72px;
    height: 44px;
    background: var(--secondary-color);
    border-radius: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
    transition: all 0.2s ease;
}

.send-btn.active {
    background: var(--accent-color);
    color: var(--bg-primary);
    transform: scale(1.02);
}

/* ========== 阅读模式样式 ========== */

/* 阅读模式遮罩层 */
.reading-mode-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, #f9fafb 0%, #ffffff 100%);
    z-index: 9999;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
}

.reading-mode-overlay.active {
    transform: translateY(0);
}

/* 顶部操作栏 */
.reading-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) var(--spacing-lg);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10rpx);
    border-bottom: 1rpx solid var(--secondary-color);
    height: 100rpx;
    box-sizing: border-box;
}

.reading-close-btn,
.reading-share-btn {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.reading-close-btn:active,
.reading-share-btn:active {
    background: var(--secondary-dark);
    transform: scale(0.9);
}

/* 内容滚动区域 */
.reading-content-scroll {
    flex: 1;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.reading-content-wrapper {
    padding: var(--spacing-xl) var(--spacing-lg);
    max-width: 750rpx;
    margin: 0 auto;
}

.reading-title {
    font-size: 48rpx;
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    line-height: 1.4;
    margin-bottom: var(--spacing-xl);
    display: block;
}

.reading-text {
    font-size: 32rpx;
    color: var(--text-primary);
    line-height: 1.8;
    white-space: pre-wrap;
    word-wrap: break-word;
    display: block;
    letter-spacing: 0.5rpx;
}

/* 简化播放控制栏 */
.reading-playback-bar {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20rpx);
    border-top: 1rpx solid var(--secondary-color);
    padding: var(--spacing-md) var(--spacing-lg);
    box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 播客信息 */
.reading-podcast-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
}

.reading-mini-cover {
    width: 88rpx;
    height: 88rpx;
    border-radius: var(--border-radius-md);
    flex-shrink: 0;
}

.reading-podcast-text {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 4rpx;
}

.reading-podcast-title {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.reading-podcast-channel {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 进度条容器 */
.reading-progress-container {
    margin-bottom: var(--spacing-md);
}

.reading-slider {
    width: 100%;
    height: 20px;
}

/* 播放控制按钮 */
.reading-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-xl);
}

.reading-control-btn {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.reading-control-btn:active {
    background: var(--secondary-dark);
    transform: scale(0.9);
}

.reading-play-btn {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-dark) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 24rpx rgba(237, 137, 54, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.reading-play-btn:active {
    transform: scale(0.95);
    box-shadow: 0 4rpx 12rpx rgba(237, 137, 54, 0.2);
}

/* 阅读模式动画 */
@keyframes readingFadeIn {
    from {
        opacity: 0;
        transform: translateY(20rpx);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.reading-mode-overlay.active .reading-content-wrapper {
    animation: readingFadeIn 0.5s ease 0.2s backwards;
}

.reading-mode-overlay.active .reading-playback-bar {
    animation: readingFadeIn 0.4s ease 0.3s backwards;
}
