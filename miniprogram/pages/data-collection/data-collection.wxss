/* 数据收集清单页面样式 */
.data-collection-container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

.content-section {
  padding: 20px;
}

.data-collection-content {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 20px;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.90);
  margin-bottom: 10px;
  text-align: center;
}

.description {
  font-size: 14px;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.60);
  margin-bottom: 25px;
  text-align: center;
  line-height: 1.5;
}

.data-category {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.category-title {
  font-size: 16px;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.85);
  margin-bottom: 15px;
  display: block;
}

.data-item {
  display: flex;
  flex-direction: column;
  padding: 12px 0;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}

.data-item:last-child {
  border-bottom: none;
}

.data-name {
  font-size: 14px;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.80);
  margin-bottom: 4px;
}

.data-purpose {
  font-size: 13px;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.60);
  line-height: 1.4;
  margin-bottom: 6px;
}

.data-status {
  font-size: 12px;
  font-weight: 500;
  padding: 3px 8px;
  border-radius: 10px;
  align-self: flex-start;
}

.data-status.required {
  background: rgba(255, 68, 68, 0.1);
  color: #FF4444;
}

.data-status.optional {
  background: rgba(8, 132, 255, 0.1);
  color: #0884FF;
}

.notice-section {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin: 15px 0 20px 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.notice-title {
  font-size: 16px;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.85);
  margin-bottom: 12px;
  display: block;
}

.notice-text {
  font-size: 13px;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  line-height: 1.5;
  margin-bottom: 8px;
  display: block;
}

.date-info {
  font-size: 12px;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.40);
  text-align: center;
  margin-top: 20px;
}