/* 收听历史页面 - iOS 风格设计系统 */

/* CSS 变量定义 - 复用 iOS 风格色彩系统 */
page {
  /* 背景色 */
  --bg-primary: #f8f9fa;
  --bg-card: rgba(255, 255, 255, 0.95);
  --bg-glass: rgba(255, 255, 255, 0.7);

  /* 文字色彩 */
  --text-primary: rgba(30, 41, 59, 0.9);
  --text-secondary: rgba(100, 116, 139, 0.8);
  --text-muted: rgba(148, 163, 184, 0.7);

  /* iOS风格阴影 */
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.04);
  --shadow-md: 0 2px 6px rgba(0, 0, 0, 0.06);

  /* 圆角 */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 14px;
  --radius-xl: 16px;

  /* iOS动画 */
  --ease: cubic-bezier(0.4, 0, 0.2, 1);

  /* 功能色 */
  --color-blue: #0884ff;
  --color-red: #ff3b30;
  --color-green: #34c759;
  --color-orange: #ff9500;

  background-color: var(--bg-primary);
}

/* 主容器 */
.history-container {
  min-height: 100vh;
  background: var(--bg-primary);
  padding-bottom: 20px;
}

/* 导航栏 - iOS 风格 */
.nav-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.04);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 16px;
  height: 52px;
}

.nav-back {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.04);
  transition: all 0.2s var(--ease);
  color: var(--text-primary);
}

.nav-back:active {
  background-color: rgba(0, 0, 0, 0.08);
  transform: scale(0.96);
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: -0.3px;
}

.nav-placeholder {
  width: 36px;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 40px 20px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 40px 20px;
  gap: 12px;
}

.empty-icon {
  color: rgba(0, 0, 0, 0.15);
  opacity: 0.6;
  margin-bottom: 8px;
}

.empty-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.empty-desc {
  font-size: 14px;
  color: var(--text-muted);
}

/* 历史内容区域 */
.history-content {
  padding: 16px;
}

/* 统计卡片 */
.stats-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: var(--shadow-sm);
  border: 0.5px solid rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: center;
  align-items: center;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.stats-number {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5px;
}

.stats-label {
  font-size: 13px;
  font-weight: 500;
  color: var(--text-secondary);
  letter-spacing: 0.3px;
}

/* 历史列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-xs);
  border: 0.5px solid rgba(0, 0, 0, 0.03);
  transition: all 0.2s var(--ease);
}

.history-item:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.99);
  box-shadow: var(--shadow-sm);
}

/* 封面区域 */
.item-cover {
  position: relative;
  width: 70px;
  height: 70px;
  border-radius: var(--radius-sm);
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: var(--shadow-xs);
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.play-badge {
  position: absolute;
  bottom: 4px;
  right: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.9);
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
}

/* 内容信息 */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 0;
}

.item-title {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-channel {
  font-size: 12px;
  color: var(--text-secondary);
  margin-bottom: 2px;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
  color: var(--text-muted);
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 3px;
}

.meta-text {
  font-size: 11px;
}

.meta-divider {
  color: var(--text-muted);
  opacity: 0.5;
}

.item-status {
  margin-top: 4px;
}

.status-badge {
  display: inline-block;
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 10px;
  font-weight: 600;
}

.status-badge.completed {
  background: rgba(52, 199, 89, 0.1);
  color: var(--color-green);
  border: 0.5px solid rgba(52, 199, 89, 0.2);
}

.status-badge.in-progress {
  background: rgba(255, 149, 0, 0.1);
  color: var(--color-orange);
  border: 0.5px solid rgba(255, 149, 0, 0.2);
}

/* 操作按钮 */
.item-action {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: rgba(255, 59, 48, 0.1);
  color: var(--color-red);
  transition: all 0.2s var(--ease);
}

.delete-btn:active {
  background: rgba(255, 59, 48, 0.2);
  transform: scale(0.94);
}

/* 底部操作区域 */
.bottom-actions {
  margin-top: 24px;
  padding: 0 0 20px;
}

.clear-button {
  width: 100%;
  height: 48px;
  background: rgba(255, 59, 48, 0.1);
  border: 0.5px solid rgba(255, 59, 48, 0.2);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  color: var(--color-red);
  font-size: 15px;
  font-weight: 600;
  transition: all 0.2s var(--ease);
  margin: 0;
  padding: 0;
}

.clear-button::after {
  border: none;
}

.clear-button:active {
  background: rgba(255, 59, 48, 0.15);
  transform: scale(0.98);
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.history-item {
  animation: fadeIn 0.3s var(--ease) backwards;
}

.history-item:nth-child(1) {
  animation-delay: 0.05s;
}
.history-item:nth-child(2) {
  animation-delay: 0.1s;
}
.history-item:nth-child(3) {
  animation-delay: 0.15s;
}
.history-item:nth-child(4) {
  animation-delay: 0.2s;
}
.history-item:nth-child(5) {
  animation-delay: 0.25s;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .item-cover {
    width: 60px;
    height: 60px;
  }

  .item-title {
    font-size: 13px;
    -webkit-line-clamp: 1;
  }

  .history-item {
    padding: 10px;
    gap: 10px;
  }

  .stats-card {
    padding: 16px;
  }

  .stats-number {
    font-size: 28px;
  }
}
