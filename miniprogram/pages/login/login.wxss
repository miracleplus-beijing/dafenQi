/* 登录页面样式 */

/* 用户信息完善界面样式 */
.user-info-form {
  width: 100%;
  max-width: 340px;
  max-height: 80vh;
  background: white;
  border-radius: 20px;
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 2;
}

.form-container {
  padding: 24px 20px;
}

.form-title {
  font-size: 22px;
  font-weight: 600;
  color: #333333;
  text-align: center;
  margin-bottom: 6px;
}

.form-subtitle {
  font-size: 13px;
  color: #666666;
  text-align: center;
  margin-bottom: 24px;
  line-height: 1.3;
}

/* 头像选择器样式 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24px;
}

.avatar-wrapper {
  padding: 0 !important;
  width: 70px !important;
  height: 70px !important;
  border-radius: 50% !important;
  margin-bottom: 10px;
  background: transparent;
  border: 3px dashed #DDDDDD;
  overflow: hidden;
  position: relative;
  transition: border-color 0.3s ease;
}

.avatar-wrapper:hover {
  border-color: #4CAF50;
}

.avatar-wrapper.disabled {
  border-color: #ccc;
  opacity: 0.6;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-tip {
  font-size: 12px;
  color: #888888;
}

/* 用户名输入区域样式 */
.input-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.input-label {
  font-size: 14px;
  color: #333333;
  font-weight: 500;
}

.nickname-btn {
  padding: 4px 12px !important;
  height: 28px !important;
  line-height: 20px !important;
  background-color: #E3F2FD !important;
  color: #1976D2 !important;
  border: none !important;
  border-radius: 14px !important;
  font-size: 12px !important;
  font-weight: normal !important;
  transition: all 0.2s ease;
  overflow: hidden;
}

.avatar-wrapper:active {
  border-color: #0884FF;
  transform: scale(0.95);
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-tip {
  font-size: 12px;
  color: #999999;
  text-align: center;
}

/* 基础信息区域样式 */
.basic-info-section {
  margin-bottom: 20px;
}

/* 通用输入区域样式 */
.input-section {
  margin-bottom: 16px;
}

.input-label {
  font-size: 14px;
  color: #333333;
  margin-bottom: 6px;
  font-weight: 500;
  display: block;
}

.form-input {
  width: 100%;
  height: 44px;
  background: #F8F9FA;
  border: 1px solid #E9ECEF;
  border-radius: 12px;
  padding: 0 14px;
  font-size: 16px;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.form-input:focus {
  border-color: #0884FF;
  background: white;
  box-shadow: 0 0 0 3px rgba(8, 132, 255, 0.1);
}

/* 学术信息区域样式 */
.academic-info-section {
  margin-bottom: 20px;
  border-top: 1px solid #F0F0F0;
  padding-top: 16px;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333333;
}

.optional-text {
  font-size: 12px;
  color: #999999;
  margin-left: 6px;
}

/* ORCID输入样式 */
.orcid-input-wrapper {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border: 1px solid #E9ECEF;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.2s ease;
}

.orcid-input-wrapper:focus-within {
  border-color: #0884FF;
  background: white;
  box-shadow: 0 0 0 3px rgba(8, 132, 255, 0.1);
}

.orcid-prefix {
  font-size: 14px;
  color: #666666;
  padding: 0 12px 0 16px;
  background: #F0F0F0;
  height: 48px;
  line-height: 48px;
  flex-shrink: 0;
}

.orcid-input {
  flex: 1;
  height: 48px;
  border: none;
  background: transparent;
  padding: 0 16px 0 8px;
  font-size: 16px;
  color: #333333;
  box-sizing: border-box;
}

/* 学术领域标签样式 */
.academic-fields {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 8px;
}

.field-tag {
  padding: 8px 16px;
  background: #F8F9FA;
  border: 1px solid #E9ECEF;
  border-radius: 20px;
  font-size: 14px;
  color: #666666;
  transition: all 0.2s ease;
  cursor: pointer;
}

.field-tag:active {
  transform: scale(0.95);
}

.field-tag.selected {
  background: #0884FF;
  border-color: #0884FF;
  color: white;
}

/* 选择器样式 */
.picker {
  width: 100%;
}

.picker-input {
  width: 100%;
  height: 44px;
  background: #F8F9FA;
  border: 1px solid #E9ECEF;
  border-radius: 12px;
  padding: 0 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.picker-input:active {
  border-color: #0884FF;
  background: white;
  box-shadow: 0 0 0 3px rgba(8, 132, 255, 0.1);
}

.picker-text {
  font-size: 16px;
  color: #333333;
  flex: 1;
}

.picker-text:empty::before {
  content: attr(placeholder);
  color: #999999;
}

.picker-arrow {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

/* 自定义机构输入 */
.custom-input {
  margin-top: 8px;
}

/* 错误提示样式 */
.input-tip.error {
  color: #FF4757;
}

.input-tip {
  font-size: 12px;
  color: #999999;
  line-height: 1.4;
  margin-top: 4px;
  display: block;
}

/* ORCID输入样式优化（去掉前缀包装器） */
.orcid-input-wrapper {
  display: none; /* 隐藏原有的前缀样式 */
}

/* 昵称输入区域样式（保持兼容） */
.nickname-section {
  margin-bottom: 32px;
}

.nickname-label {
  font-size: 14px;
  color: #333333;
  margin-bottom: 8px;
  font-weight: 500;
}

.nickname-input {
  width: 100%;
  height: 48px;
  background: #F8F9FA;
  border: 1px solid #E9ECEF;
  border-radius: 12px;
  padding: 0 16px;
  font-size: 16px;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.nickname-input:focus {
  border-color: #0884FF;
  background: white;
  box-shadow: 0 0 0 3px rgba(8, 132, 255, 0.1);
}

/* 操作按钮样式 */
.form-actions {
  display: flex;
  gap: 12px;
}

.complete-btn, .skip-btn {
  flex: 1;
  height: 44px;
  border: none;
  border-radius: 22px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.complete-btn {
  background: #0884FF;
  color: white;
  box-shadow: 0 4px 12px rgba(8, 132, 255, 0.3);
}

.complete-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2px 8px rgba(8, 132, 255, 0.4);
}

.skip-btn {
  background: #F8F9FA;
  color: #666666;
  border: 1px solid #E9ECEF;
}

.skip-btn:active {
  transform: scale(0.98);
  background: #EEEEEE;
}
.login-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #0884FF 0%, #85C2FF 100%);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px 40px;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.circle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 120px;
  height: 120px;
  top: 10%;
  right: -20px;
  animation-delay: 0s;
}

.circle-2 {
  width: 80px;
  height: 80px;
  top: 30%;
  left: -10px;
  animation-delay: 2s;
}

.circle-3 {
  width: 60px;
  height: 60px;
  bottom: 20%;
  right: 30px;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

/* Logo区域 */
.logo-section {
  position: relative;
  z-index: 2;
  text-align: center;
  margin-top: 40px;
  margin-bottom: 30px;
}

.app-logo {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
  border-radius: 20px;
  background: white;
  padding: 6px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

.app-name {
  display: block;
  font-size: 28px;
  font-weight: 700;
  color: white;
  margin-bottom: 6px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.app-slogan {
  display: block;
  font-size: 14px;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* 登录内容区域 */
.login-content {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 320px;
  background: white;
  border-radius: 20px;
  padding: 32px 24px;
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

/* 微信登录按钮 */
.login-btn {
  width: 100%;
  height: 52px;
  background: #07C160;
  color: white;
  border: none;
  border-radius: 26px;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24px;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.3);
  transition: all 0.2s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2px 8px rgba(7, 193, 96, 0.4);
}

.login-btn.disabled {
  background: #CCCCCC;
  color: #999999;
  box-shadow: none;
}

.login-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}

.login-text {
  font-size: 16px;
  font-weight: 500;
}

/* 其他登录方式 */
.other-login {
  margin-bottom: 24px;
}

.divider-text {
  display: block;
  text-align: center;
  font-size: 14px;
  color: #999999;
  margin-bottom: 16px;
  position: relative;
}

.divider-text::before,
.divider-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 60px;
  height: 1px;
  background: #EEEEEE;
}

.divider-text::before {
  left: 20px;
}

.divider-text::after {
  right: 20px;
}

.login-options {
  display: flex;
  gap: 16px;
}

.login-option {
  flex: 1;
  height: 48px;
  background: #F8F8F8;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
}

.login-option:active {
  background: #EEEEEE;
}

.option-icon {
  width: 20px;
  height: 20px;
  margin-bottom: 2px;
}

.option-text {
  font-size: 12px;
  color: #666666;
}

/* 同意协议 */
.agreement-section {
  margin-bottom: 24px;
  padding: 0 4px;
}

.agreement-checkbox {
  display: flex;
  align-items: flex-start;
  cursor: pointer;
}

.checkbox-icon {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
  margin-right: 8px;
  margin-top: 2px;
}

.agreement-text {
  flex: 1;
  font-size: 12px;
  color: #666666;
  line-height: 1.4;
}

.link-text {
  color: #0884FF;
  text-decoration: underline;
}

/* 游客模式 */
.guest-mode {
  text-align: center;
  padding: 12px;
}

.guest-text {
  font-size: 14px;
  color: #999999;
  text-decoration: underline;
}

/* 底部装饰 */
.bottom-decoration {
  position: relative;
  z-index: 2;
  margin-top: auto;
  padding-top: 40px;
}

.copyright {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
}