/* 登录页面样式 - 奇绩蓝主题 */

/* 整体容器 */
.content {
  width: 100vw;
  height: 100vh;
  background-color: #ffffff;
  position: relative;
}

/* 背景装饰 - 奇绩蓝渐变圆形 */
.bg {
  position: fixed;
  top: -250rpx;
  right: -250rpx;
  width: 600rpx;
  height: 600rpx;
  border-radius: 100%;
  background-color: #0884FF;
  z-index: 1;
}

.bg2 {
  position: fixed;
  top: -150rpx;
  right: -300rpx;
  width: 600rpx;
  height: 600rpx;
  border-radius: 100%;
  background-color: #85C2FF;
  z-index: 0;
}

/* Logo区域 */
.logo-section {
  position: relative;
  z-index: 2;
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 50rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  background: white;
  padding: 12rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}

/* 登录标题区域 */
.tips {
  position: relative;
  z-index: 2;
  padding-top: 20rpx;
  padding-left: 80rpx;
  display: flex;
  flex-direction: column;
}

.tips .title {
  line-height: 80rpx;
  font-weight: bold;
  font-size: 60rpx;
  color: #1A1A1A;
}

.tips .subtitle {
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #666666;
}

/* 表单区域 */
.form-box {
  position: relative;
  z-index: 2;
  padding-top: 10rpx;
  padding-left: 40rpx;
  width: 710rpx;
}

/* 微信登录按钮 */
.login-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(to right, #0884FF, #85C2FF);
  border-radius: 100rpx;
  margin: 40rpx 0;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(8, 132, 255, 0.3);
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.login-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  filter: brightness(0) invert(1);
}

.login-text {
  font-size: 32rpx;
  font-weight: 500;
  color: white;
}

/* 用户信息设置区域 */
.user-info-section {
  background: white;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 头像选择 - 完全复刻avatar_nickname样式 */
.avatar-wrapper {
  padding: 0 !important;
  width: 112rpx !important;
  height: 112rpx !important;
  border-radius: 16rpx;
  margin: 40rpx 0 60rpx 0;
  background: transparent !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  display: block;
  width: 112rpx;
  height: 112rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

/* 昵称输入区域 */
.nickname-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.nickname-label {
  display: block;
  font-size: 28rpx;
  color: #1A1A1A;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #1A1A1A;
  border: none;
}

/* 完成按钮 */
.complete-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(to right, #0884FF, #85C2FF);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(8, 132, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}

.complete-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 其他操作 */
.other-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.other-actions text {
  line-height: 80rpx;
  font-size: 28rpx;
  cursor: pointer;
  color: #666666;
}

.register-link {
  color: #0884FF !important;
}

.other-actions text:active {
  opacity: 0.7;
}

/* 协议同意区域 */
.agreement-section {
  position: relative;
  z-index: 2;
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: flex-start;
  cursor: pointer;
}

.checkbox-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.agreement-text {
  flex: 1;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

.link-text {
  color: #0884FF;
  text-decoration: underline;
}

/* 底部装饰 */
.bottom-decoration {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  z-index: 2;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: #999999;
}