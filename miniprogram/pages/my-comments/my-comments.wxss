/* 我的评论页面样式 */
.my-comments-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* ============= Tab导航 ============= */
.tab-header {
  display: flex;
  background-color: #ffffff;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
  position: relative;
}

.tab-text {
  font-size: 32rpx;
  color: #999999;
  font-weight: 400;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #0884FF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #0884FF;
  border-radius: 2rpx;
}

/* ============= 登录提示 ============= */
.login-prompt {
  padding: 120rpx 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.login-prompt-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.login-prompt-icon {
  margin-bottom: 32rpx;
  opacity: 0.4;
  color: #999999;
}

.login-prompt-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.login-prompt-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 48rpx;
}

.login-btn {
  background-color: #0884FF;
  color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  min-width: 200rpx;
}

.login-btn:active {
  background-color: #0670D9;
  transform: scale(0.98);
}

/* ============= 滚动容器 ============= */
.comments-scroll {
  flex: 1;
  height: calc(100vh - 88rpx); /* 减去Tab高度 */
}

.interactions-content {
  flex: 1;
  display: flex;
  flex-direction: column;  
  align-items: center;
  min-height: calc(100vh - 88rpx);
}

/* ============= 空状态 ============= */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  margin-bottom: 32rpx;
  opacity: 0.3;
  color: #999999;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #cccccc;
}

/* ============= 加载状态 ============= */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.loading-icon {
  margin-bottom: 24rpx;
  color: #0884FF;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* ============= 评论列表 ============= */
.comment-list {
  padding: 24rpx 32rpx;
}

.comment-item {
  display: flex;
  align-items: flex-start;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  position: relative;
  transition: transform 0.1s ease;
}

.comment-item:active {
  transform: scale(0.98);
}

/* ============= 博客封面 ============= */
.comment-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* ============= 评论信息 ============= */
.comment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 16rpx;
}

.podcast-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.comment-content {
  margin-bottom: 16rpx;
}

.comment-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

/* ============= 元数据信息 ============= */
.comment-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.meta-icon {
  margin-right: 8rpx;
  opacity: 0.6;
  color: #999999;
}

.meta-text {
  font-size: 24rpx;
  color: #999999;
}

/* ============= 右侧箭头 ============= */
.comment-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  padding-left: 16rpx;
}

/* ============= 响应式适配 ============= */
@media (max-width: 375px) {
  .comment-item {
    padding: 24rpx;
  }

  .comment-cover {
    width: 140rpx;
    height: 140rpx;
  }

  .podcast-title {
    font-size: 26rpx;
  }

  .comment-text {
    font-size: 30rpx;
  }
}
