/* 搜索页面样式 */
.search-page {
  width: 100%;
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 44px 20px 12px 20px;
  background: #ffffff;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-container {
  flex: 1;
  margin-right: 12px;
}

.search-input-wrapper {
  width: 100%;
  height: 42px;
  background: #F3F3F3;
  border-radius: 10px;
  padding-left: 44px;
  display: flex;
  align-items: center;
  position: relative;
  transition: all 0.2s ease;
}

.search-input-wrapper:active {
  background: #E8E8E8;
  transform: scale(0.995);
}

.search-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  width: 24px;
  height: 24px;
}

.search-input {
  flex: 1;
  border: none;
  background: none;
  outline: none;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.9);
  height: 100%;
}

.search-input::placeholder {
  color: rgba(0, 0, 0, 0.5);
}

.clear-btn {
  position: absolute;
  right: 12px;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  width: 16px;
  height: 16px;
  opacity: 0.5;
}

.cancel-btn {
  padding: 8px 0;
  color: #0884FF;
  font-size: 16px;
  font-weight: 500;
}

/* 搜索内容区域 */
.search-content {
  flex: 1;
  padding: 0 20px;
}

/* 搜索结果 */
.results-section {
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 16px 0 12px 0;
}

.section-label {
  font-size: 16px;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.5);
}

.results-list {
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
}

/* 播客条目样式 - 仿照分类页面 */
.podcast-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f8f8f8;
  transition: background-color 0.2s ease;
  background: #ffffff;
}

.podcast-item:last-child {
  border-bottom: none;
}

.podcast-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

/* 播客封面 */
.podcast-cover {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  margin-right: 16px;
  overflow: hidden;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.default-cover {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #0884FF, #85C2FF);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-text {
  font-size: 18px;
  font-weight: 700;
  color: #ffffff;
}

/* 播客信息 */
.podcast-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
  margin-right: 12px;
}

.podcast-channel {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 500;
}

.podcast-title {
  font-size: 16px;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.podcast-description {
  font-size: 13px;
  color: rgba(0, 0, 0, 0.5);
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.podcast-duration {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
}

/* 播放按钮 */
.podcast-play {
  width: 32px;
  height: 32px;
  flex-shrink: 0;
}

/* 频道条目样式 */
.channel-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f8f8f8;
  transition: background-color 0.2s ease;
  background: #ffffff;
}

.channel-item:last-child {
  border-bottom: none;
}

.channel-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.item-title {
  font-size: 16px;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.4;
}

.item-subtitle {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
  line-height: 1.3;
}

.subscriber-count {
  color: rgba(0, 0, 0, 0.5);
}

/* 搜索关键词高亮 */
.search-highlight {
  color: #0884FF !important;
  font-weight: 600 !important;
  background: rgba(8, 132, 255, 0.1) !important;
  padding: 1px 3px !important;
  border-radius: 3px !important;
  display: inline !important;
}

/* 图标 */
.arrow-icon {
  width: 24px;
  height: 24px;
  margin-left: 12px;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.loading-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 16px;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.5);
}

/* 空状态 */
.empty-state, .no-results-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 24px;
  opacity: 0.3;
}

.empty-text {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 8px;
}

.empty-subtext {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.3);
}

/* 搜索历史 */
.search-history {
  margin-top: 24px;
}

.clear-history-btn {
  color: #0884FF;
  font-size: 14px;
}

.history-list {
  margin-top: 12px;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f8f8f8;
  transition: background-color 0.2s ease;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.history-icon {
  width: 16px;
  height: 16px;
  margin-right: 12px;
  opacity: 0.5;
}

.history-text {
  flex: 1;
  font-size: 16px;
  color: rgba(0, 0, 0, 0.7);
}

/* 动画效果 */
.search-page {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.results-section {
  animation: fadeInUp 0.4s ease-out;
}

@keyframes fadeInUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .search-header {
    padding: 44px 16px 12px 16px;
  }
  
  .search-content {
    padding: 0 16px;
  }
  
  .podcast-item, .channel-item {
    padding: 14px 12px;
  }
  
  .podcast-cover {
    width: 50px;
    height: 50px;
    margin-right: 12px;
  }
}