/* 收藏页面 - iOS 风格设计系统 */

/* CSS 变量定义 - 复用 iOS 风格色彩系统 */
page {
  /* 背景色 */
  --bg-primary: #f8f9fa;
  --bg-card: rgba(255, 255, 255, 0.95);
  --bg-glass: rgba(255, 255, 255, 0.7);

  /* 文字色彩 */
  --text-primary: rgba(30, 41, 59, 0.9);
  --text-secondary: rgba(100, 116, 139, 0.8);
  --text-muted: rgba(148, 163, 184, 0.7);

  /* iOS风格阴影 */
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.04);
  --shadow-md: 0 2px 6px rgba(0, 0, 0, 0.06);

  /* 圆角 */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 14px;
  --radius-xl: 16px;

  /* iOS动画 */
  --ease: cubic-bezier(0.4, 0, 0.2, 1);

  /* 功能色 */
  --color-blue: #0884ff;
  --color-red: #ff3b30;
  --color-green: #34c759;
  --color-orange: #ff9500;

  background-color: var(--bg-primary);
}

/* 主容器 */
.favorites-container {
  min-height: 100vh;
  background: var(--bg-primary);
  padding-bottom: 20px;
}

/* ===================================
   1. 导航栏 - iOS 风格
   =================================== */
.nav-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.04);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 16px;
  height: 52px;
}

.nav-back {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.04);
  transition: all 0.2s var(--ease);
  color: var(--text-primary);
}

.nav-back:active {
  background-color: rgba(0, 0, 0, 0.08);
  transform: scale(0.96);
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: -0.3px;
}

.nav-placeholder {
  width: 36px;
}

/* ===================================
   2. 未登录视图 - iOS 风格
   =================================== */
.login-view {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 32px 24px;
}

.login-hero {
  width: 100%;
  max-width: 400px;
  background: var(--bg-card);
  border-radius: var(--radius-xl);
  padding: 48px 32px 32px;
  box-shadow: var(--shadow-md);
  border: 0.5px solid rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInUp 0.4s var(--ease);
}

.login-icon-wrapper {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #ff3b30 0%, #ff6b6b 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24px;
  color: #fff;
  box-shadow: 0 4px 12px rgba(255, 59, 48, 0.3);
}

.login-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5px;
  margin-bottom: 8px;
  text-align: center;
}

.login-subtitle {
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 32px;
  text-align: center;
}

.login-features {
  width: 100%;
  margin-bottom: 32px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12px;
}

.feature-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-green);
}

.feature-text {
  font-size: 14px;
  color: var(--text-secondary);
  font-weight: 500;
}

.login-button {
  width: 100%;
  height: 48px;
  background: linear-gradient(135deg, #ff3b30 0%, #ff6b6b 100%);
  border: none;
  border-radius: var(--radius-md);
  box-shadow: 0 4px 12px rgba(255, 59, 48, 0.25);
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s var(--ease);
  margin: 0;
  padding: 0;
}

.login-button::after {
  border: none;
}

.login-button:active {
  transform: scale(0.98);
  box-shadow: 0 2px 8px rgba(255, 59, 48, 0.2);
}

/* ===================================
   3. 收藏内容区域
   =================================== */
.favorites-content {
  padding: 0;
}

/* 标签页切换 */
.tabs-container {
  position: sticky;
  top: 0;
  z-index: 99;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.04);
  padding: 12px 16px;
}

.tabs-wrapper {
  position: relative;
  display: flex;
  justify-content: space-around;
  gap: 12px;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 16px;
  transition: all 0.2s var(--ease);
  position: relative;
  z-index: 1;
}

.tab-text {
  font-size: 15px;
  font-weight: 500;
  color: var(--text-muted);
  transition: all 0.2s var(--ease);
}

.tab-item.active .tab-text {
  color: var(--text-primary);
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  width: 50%;
  height: 3px;
  background: linear-gradient(135deg, var(--color-red) 0%, #ff6b6b 100%);
  border-radius: 2px 2px 0 0;
  transition: left 0.3s var(--ease);
  transform: translateX(-50%);
}

/* 内容区域 */
.episodes-content,
.comments-content {
  padding: 16px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 40px 20px;
  gap: 12px;
}

.empty-icon {
  color: rgba(0, 0, 0, 0.15);
  opacity: 0.6;
  margin-bottom: 8px;
}

.empty-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.empty-desc {
  font-size: 14px;
  color: var(--text-muted);
}

/* ===================================
   4. 收藏列表
   =================================== */
.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.favorite-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-xs);
  border: 0.5px solid rgba(0, 0, 0, 0.03);
  transition: all 0.2s var(--ease);
}

.favorite-item:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.99);
  box-shadow: var(--shadow-sm);
}

/* 封面区域 */
.item-cover {
  position: relative;
  width: 70px;
  height: 70px;
  border-radius: var(--radius-sm);
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: var(--shadow-xs);
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.play-badge {
  position: absolute;
  bottom: 4px;
  right: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.9);
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
}

/* 内容信息 */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 0;
}

.item-title {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-channel {
  font-size: 12px;
  color: var(--text-secondary);
  margin-bottom: 2px;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
  color: var(--text-muted);
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 3px;
}

.meta-text {
  font-size: 11px;
}

.meta-divider {
  color: var(--text-muted);
  opacity: 0.5;
}

/* 操作按钮组 */
.item-actions {
  display: flex;
  flex-direction: column;
  gap: 8px;
  flex-shrink: 0;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: rgba(8, 132, 255, 0.1);
  color: var(--color-blue);
  transition: all 0.2s var(--ease);
}

.share-btn:active {
  background: rgba(8, 132, 255, 0.2);
  transform: scale(0.94);
}

.unfavorite-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: rgba(255, 59, 48, 0.1);
  color: var(--color-red);
  transition: all 0.2s var(--ease);
}

.unfavorite-btn:active {
  background: rgba(255, 59, 48, 0.2);
  transform: scale(0.94);
}

/* ===================================
   5. 动画
   =================================== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.favorite-item {
  animation: fadeInUp 0.3s var(--ease) backwards;
}

.favorite-item:nth-child(1) {
  animation-delay: 0.05s;
}
.favorite-item:nth-child(2) {
  animation-delay: 0.1s;
}
.favorite-item:nth-child(3) {
  animation-delay: 0.15s;
}
.favorite-item:nth-child(4) {
  animation-delay: 0.2s;
}
.favorite-item:nth-child(5) {
  animation-delay: 0.25s;
}

/* ===================================
   7. 响应式设计
   =================================== */
@media (max-width: 375px) {
  .item-cover {
    width: 60px;
    height: 60px;
  }

  .item-title {
    font-size: 13px;
    -webkit-line-clamp: 1;
  }

  .favorite-item {
    padding: 10px;
    gap: 10px;
  }

  .login-hero {
    padding: 40px 24px 24px;
  }

  .login-title {
    font-size: 22px;
  }
}
