/* 收藏页面样式 */
.favorites-container {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* ============= 顶部标签栏 ============= */
.tab-header {
  display: flex;
  background-color: #ffffff;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
  position: relative;
}

.tab-text {
  font-size: 32rpx;
  color: #999999;
  font-weight: 400;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* ============= 会员提示条 ============= */
.member-tip {
  margin: 24rpx 32rpx;
  background: linear-gradient(135deg, #2c2c2c 0%, #434343 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  position: relative;
}

.member-tip-content {
  display: flex;
  align-items: center;
}

.member-tip-icon {
  margin-right: 24rpx;
}

.tip-icon {
  width: 48rpx;
  height: 48rpx;
}

.member-tip-text {
  flex: 1;
}

.tip-title {
  display: block;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.tip-subtitle {
  display: block;
  color: #cccccc;
  font-size: 28rpx;
  line-height: 1.3;
}

.member-tip-close {
  padding: 8rpx;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

/* ============= 登录提示 ============= */
.login-prompt {
  padding: 120rpx 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.login-prompt-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.login-prompt-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.4;
  color: #999999;
}

.login-prompt-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.login-prompt-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 48rpx;
}

.login-btn {
  background-color: #1890ff;
  color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  min-width: 200rpx;
}

.login-btn:active {
  background-color: #1677cc;
  transform: scale(0.98);
}

/* ============= 内容区域 ============= */
.content-container {
  flex: 1;
}

/* ============= 空状态 ============= */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
  color: #999999;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #cccccc;
}

/* ============= 收藏列表 ============= */
.favorites-list {
  padding: 24rpx 32rpx;
}

.favorite-item {
  display: flex;
  align-items: flex-start;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  position: relative;
}

.favorite-item:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

/* ============= 播客封面 ============= */
.item-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* ============= 播客信息 ============= */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 16rpx;
}

.item-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-hosts {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ============= 元数据信息 ============= */
.item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  opacity: 0.6;
  color: #999999;
}

.meta-text {
  font-size: 24rpx;
  color: #999999;
}

/* ============= 操作按钮 ============= */
.item-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  flex-shrink: 0;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.play-btn {
  background-color: #1890ff;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

.play-btn:active {
  background-color: #1677cc;
  transform: scale(0.95);
}

.more-btn {
  background-color: #f5f5f5;
}

.more-btn:active {
  background-color: #e8e8e8;
  transform: scale(0.95);
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

.play-btn .action-icon {
  color: #ffffff;
}

.more-btn .action-icon {
  color: #666666;
}

/* ============= 更多操作弹窗 ============= */
.action-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.modal-content {
  width: 100%;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx;
  animation: modalSlideUp 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #e8e8e8;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.modal-action-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  transition: background-color 0.2s ease;
}

.modal-action-item:active {
  background-color: #f5f5f5;
}

.modal-action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  color: #666666;
}

.modal-action-text {
  font-size: 32rpx;
  color: #333333;
}

/* ============= 评论标签页 ============= */
.comments-content {
  padding: 60rpx 32rpx;
}

/* ============= 响应式适配 ============= */
@media (max-width: 375px) {
  .favorite-item {
    padding: 24rpx;
  }

  .item-cover {
    width: 140rpx;
    height: 140rpx;
  }

  .item-title {
    font-size: 30rpx;
  }

  .member-tip {
    margin: 20rpx 24rpx;
    padding: 24rpx;
  }
}