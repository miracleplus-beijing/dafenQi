/* 榜单详情页面样式 - 复用分类页面样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background: white;
  position: relative;
  padding-bottom: 90px;
}

/* Header */
.header {
  padding: 44px 20px 0;
  background: white;
  border-bottom: 1px solid #f0f0f0;
}

.search-bar {
  position: relative;
  margin-bottom: 20px;
}

.search-input {
  width: 100%;
  height: 42px;
  background: #F3F3F3;
  border: none;
  border-radius: 10px;
  padding-left: 44px;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
}

.search-icon {
  position: absolute;
  left: 12px;
  top: 9px;
  width: 24px;
  height: 24px;
}

/* Tab Navigation */
.tab-nav {
  display: flex;
  justify-content: space-around;
  padding: 0 35px;
  margin-bottom: 20px;
}

.tab {
  font-size: 17px;
  font-weight: 400;
  color: #85C2FF;
  padding: 10px 0;
  position: relative;
}

.tab.active {
  color: #0884FF;
  font-weight: 700;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 2px;
  background: #0884FF;
}

/* Rankings Section */
.section {
  padding: 20px 0;
}

.section-title {
  font-size: 17px;
  font-weight: 400;
  color: #0884FF;
  margin: 0 35px 15px;
  display: block;
}

.ranking-item {
  display: flex;
  padding: 12px 35px;
  border-bottom: 1px solid #f8f8f8;
  align-items: center;
}

.ranking-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.ranking-number {
  width: 40px;
  height: 40px;
  background: #F2F2F7;
  border-radius: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  font-weight: 510;
  color: rgba(0, 0, 0, 0.5);
  margin-right: 15px;
}

.ranking-cover {
  width: 60px;
  height: 60px;
  border-radius: 4px;
  margin-right: 15px;
  flex-shrink: 0;
}

.ranking-content {
  flex: 1;
}

.ranking-content .ranking-title {
  font-size: 15px;
  font-weight: 510;
  color: rgba(0, 0, 0, 0.9);
  margin-bottom: 4px;
}

.ranking-channel {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.5);
}

.ranking-play {
  width: 24px;
  height: 24px;
  margin-left: 15px;
}

.tab-content {
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
  opacity: 1;
  transform: translateX(0);
}

/* 页面切换动画 */
.page-transition {
  transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), opacity 0.3s ease;
}

.page-slide-left {
  transform: translateX(-100%);
  opacity: 0;
}

.page-slide-right {
  transform: translateX(100%);
  opacity: 0;
}

.page-slide-in {
  transform: translateX(0);
  opacity: 1;
}

/* 底部加载区域 */
.bottom-loader {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px 60px;
  background: white;
}

.loader-icon {
  width: 86px;
  height: 53px;
  margin-bottom: 20px;
}

.loader-text {
  font-size: 14px;
  color: #0884FF;
  font-weight: 400;
  text-align: center;
}