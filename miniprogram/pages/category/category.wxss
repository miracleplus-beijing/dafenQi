/* 分类页面 - iOS 风格渐变设计系统 */

/* CSS 变量定义 - iOS风格自然渐变色彩系统（用户需求：淡蓝色、青色、单青色为主） */
page {
  /* 主色系渐变 - 符合用户需求的淡蓝色、青色系 */
  --gradient-lightBlue: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);    /* 淡蓝色渐变 */
  --gradient-cyan: linear-gradient(135deg, #cffafe 0%, #a5f3fc 100%);         /* 青色渐变 */
  --gradient-singleCyan: linear-gradient(135deg, #22d3ee 0%, #06b6d4 100%);   /* 单青色渐变 */
  --gradient-skyBlue: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);      /* 天空蓝渐变 */
  --gradient-iceBlue: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);      /* 冰蓝渐变 */

  /* 次要色系 - 自然感强的低对比度渐变 */
  --gradient-softGreen: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);    /* 柔和绿色 */
  --gradient-warmOrange: linear-gradient(135deg, #fff7ed 0%, #fed7aa 100%);   /* 温暖橙色 */
  --gradient-lightPurple: linear-gradient(135deg, #faf5ff 0%, #e879f9 100%);  /* 淡紫色 */
  --gradient-pearlWhite: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);   /* 珍珠白 */

  /* 卡片渐变系统 - 用于分类卡片的顶部装饰条 */
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);      /* 紫色渐变 */
  --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);    /* 粉红渐变 */
  --blue-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);         /* 蓝色渐变 */
  --light-blue-gradient: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);   /* 浅蓝渐变 */
  --warm-gradient: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);         /* 暖色渐变 */
  --green-gradient: linear-gradient(135deg, #a8e6cf 0%, #dcedc1 100%);        /* 绿色渐变 */
  --pink-gradient: linear-gradient(135deg, #fad0c4 0%, #ffd1ff 100%);         /* 粉色渐变 */

  /* 背景渐变系统 - 自然的蓝色基调 */
  --bg-primary: linear-gradient(180deg, #f0f9ff 0%, #e0f2fe 50%, #f8fafc 100%);
  --bg-secondary: rgba(240, 249, 255, 0.8);
  --bg-card: rgba(255, 255, 255, 0.9);      /* 玻璃拟态卡片 */
  --bg-glass: rgba(255, 255, 255, 0.7);     /* 玻璃效果 */

  /* 文字色彩 - 自然低对比度 */
  --text-primary: rgba(30, 41, 59, 0.9);
  --text-secondary: rgba(100, 116, 139, 0.8);
  --text-muted: rgba(148, 163, 184, 0.7);

  /* iOS风格阴影系统 - 柔和自然 */
  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-glass: 0 8px 32px 0 rgba(31, 38, 135, 0.1);        /* 玻璃阴影 */
  --shadow-floating: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

  /* iOS动画系统 - 标准缓动函数 */
  --ease: cubic-bezier(0.4, 0, 0.2, 1);      /* iOS标准缓动 */
  --ease-in: cubic-bezier(0.4, 0, 1, 1);     /* 快速进入 */
  --ease-out: cubic-bezier(0, 0, 0.2, 1);    /* 快速退出 */
  --bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);  /* 弹性动画 */

  /* 边界半径 - iOS风格圆角 */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 20px;
  --radius-2xl: 24px;

  /* 间距系统 */
  --space-xs: 4px;
  --space-sm: 8px;
  --space-md: 16px;
  --space-lg: 24px;
  --space-xl: 32px;
  --space-2xl: 48px;
}

/* 主容器 - 自然渐变背景 */
.category-container {
  min-height: 100vh;
  background: var(--bg-primary);
  position: relative;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
}

/* 搜索区域 - 精简化 */
.search-section {
  padding: 12px 16px 8px;
  background: transparent;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 8px 14px;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-radius: 18px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.search-bar:active {
  transform: scale(0.99);
  background: rgba(255, 255, 255, 0.95);
}

.search-icon {
  font-size: 16px !important;
  color: var(--text-muted);
  margin-right: 8px;
}

.search-placeholder {
  font-size: 13px;
  color: var(--text-muted);
  font-weight: 400;
}

/* 学术分类区域 - 主要内容 */
.academic-section {
  padding: 16px 16px 20px;
}

.section-header {
  margin-bottom: 16px;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  padding: 0 4px;
}

.section-title {
  font-size: 17px;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: -0.3px;
}

.section-subtitle {
  font-size: 12px;
  color: var(--text-muted);
  font-weight: 400;
}

/* 学术分类 - 横向滚动两行布局 */
.categories-scroll {
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.categories-scroll::-webkit-scrollbar {
  display: none;
}

.categories-grid {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 0 4px;
}

.category-row {
  display: flex;
  gap: 10px;
  min-width: max-content;
}

.category-card {
  position: relative;
  min-width: 140px;
  padding: 16px 14px;
  border-radius: 14px;
  background: var(--bg-card);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 卡片渐变背景层 - 为每个卡片添加独特的渐变背景 */
.category-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  transition: opacity 0.4s ease;
  z-index: 0;
  border-radius: inherit;
}

.category-card:nth-child(1)::after { background: var(--gradient-lightBlue); }
.category-card:nth-child(2)::after { background: var(--gradient-cyan); }
.category-card:nth-child(3)::after { background: var(--blue-gradient); }
.category-card:nth-child(4)::after { background: var(--gradient-skyBlue); }
.category-card:nth-child(5)::after { background: var(--warm-gradient); }
.category-card:nth-child(6)::after { background: var(--green-gradient); }
.category-card:nth-child(7)::after { background: var(--pink-gradient); }

.category-card:active::after {
  opacity: 0.15;
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.category-card:nth-child(1)::before { background: var(--primary-gradient); }
.category-card:nth-child(2)::before { background: var(--secondary-gradient); }
.category-card:nth-child(3)::before { background: var(--blue-gradient); }
.category-card:nth-child(4)::before { background: var(--light-blue-gradient); }
.category-card:nth-child(5)::before { background: var(--warm-gradient); }
.category-card:nth-child(6)::before { background: var(--green-gradient); }
.category-card:nth-child(7)::before { background: var(--pink-gradient); }

.category-card:hover::before,
.category-card:active::before {
  opacity: 1;
}

.category-card:active {
  transform: translateY(-4px) scale(1.02);
  box-shadow: var(--shadow-lg);
}

.category-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  margin: 0 auto 10px;
  border-radius: 12px;
  background: var(--bg-glass);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  transition: all 0.3s ease;
  z-index: 1;
}

/* 图标包装器渐变效果 */
.category-card:nth-child(1) .category-icon-wrapper { box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2); }
.category-card:nth-child(2) .category-icon-wrapper { box-shadow: 0 4px 12px rgba(240, 147, 251, 0.2); }
.category-card:nth-child(3) .category-icon-wrapper { box-shadow: 0 4px 12px rgba(79, 172, 254, 0.2); }
.category-card:nth-child(4) .category-icon-wrapper { box-shadow: 0 4px 12px rgba(168, 237, 234, 0.2); }
.category-card:nth-child(5) .category-icon-wrapper { box-shadow: 0 4px 12px rgba(255, 236, 210, 0.2); }
.category-card:nth-child(6) .category-icon-wrapper { box-shadow: 0 4px 12px rgba(168, 230, 207, 0.2); }
.category-card:nth-child(7) .category-icon-wrapper { box-shadow: 0 4px 12px rgba(250, 208, 196, 0.2); }

.category-card:active .category-icon-wrapper {
  transform: scale(1.05);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
}

.category-icon {
  font-size: 22px !important;
  opacity: 0.85;
  transition: all 0.3s ease;
}

.category-card:nth-child(1) .category-icon { color: #667eea; }
.category-card:nth-child(2) .category-icon { color: #f093fb; }
.category-card:nth-child(3) .category-icon { color: #4facfe; }
.category-card:nth-child(4) .category-icon { color: #a8edea; }
.category-card:nth-child(5) .category-icon { color: #ffecd2; }
.category-card:nth-child(6) .category-icon { color: #a8e6cf; }
.category-card:nth-child(7) .category-icon { color: #fad0c4; }

.category-card:active .category-icon {
  opacity: 1;
  transform: scale(1.1);
}

.category-info {
  position: relative;
  text-align: center;
  z-index: 1;
  width: 100%;
}

.category-name {
  display: block;
  font-size: 13px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 3px;
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.category-code {
  display: block;
  font-size: 11px;
  color: var(--text-secondary);
  font-weight: 400;
  opacity: 0.7;
}

/* 精选推荐区域 */
.featured-section {
  padding: 0 16px 20px;
}

.featured-section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-lg);
  text-align: left;
}

.refresh-btn {
  display: flex;
  align-items: center;
  padding: var(--space-sm) var(--space-md);
  background: var(--bg-glass);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: var(--radius-lg);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.refresh-icon {
  font-size: 16px !important;
  color: var(--text-secondary);
  margin-right: var(--space-xs);
}

.refresh-btn text {
  font-size: 14px;
  color: var(--text-secondary);
  font-weight: 500;
}

.featured-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.featured-card {
  display: flex;
  padding: var(--space-lg);
  background: var(--bg-card);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-glass);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.featured-card:active {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.featured-cover {
  position: relative;
  width: 80px;
  height: 80px;
  margin-right: var(--space-lg);
  border-radius: var(--radius-lg);
  overflow: hidden;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.play-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  opacity: 0;
  transition: all 0.3s ease;
}

.featured-card:active .play-overlay {
  opacity: 1;
}

.play-icon {
  font-size: 32px !important;
  color: white;
}

.featured-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.featured-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
  line-height: 1.4;
  letter-spacing: -0.01em;
}

.featured-description {
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: var(--space-sm);
}

.featured-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.channel-name,
.duration {
  font-size: 12px;
  color: var(--text-muted);
  font-weight: 500;
}

/* 排行榜区域 - Tab切换 */
.rankings-section {
  padding: 0 16px 24px;
}

.rankings-content {
  background: var(--bg-card);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: 16px;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 10px 8px;
  border-radius: 10px;
  transition: all 0.2s ease;
  background: rgba(255, 255, 255, 0.3);
}

.ranking-item:active {
  background: rgba(255, 255, 255, 0.6);
  transform: scale(0.99);
}

.rank-number {
  width: 22px;
  height: 22px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 700;
  color: white;
  margin-right: 12px;
  flex-shrink: 0;
}

.rank-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 3px;
  margin-right: 8px;
  min-width: 0;
}

.rank-title {
  font-size: 13px;
  font-weight: 500;
  color: var(--text-primary);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-play-count {
  font-size: 11px;
  color: var(--text-muted);
  font-weight: 400;
}

.rank-play-icon {
  font-size: 20px !important;
  color: var(--text-muted);
  opacity: 0.6;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.ranking-item:active .rank-play-icon {
  opacity: 1;
  color: #667eea;
}

/* 查看完整榜单按钮 */
.view-full-ranking-btn {
  margin-top: 16px;
  padding: 10px;
  text-align: center;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 10px;
  transition: all 0.2s ease;
}

.view-full-ranking-btn:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.99);
}

.view-full-ranking-btn text {
  font-size: 13px;
  color: var(--text-muted);
  font-weight: 500;
}

/* 加载状态 */
.loading-placeholder,
.empty-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-2xl);
  text-align: center;
}

.loading-icon,
.empty-icon {
  font-size: 32px !important;
  color: var(--text-muted);
  margin-bottom: var(--space-md);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.loading-placeholder text,
.empty-placeholder text {
  font-size: 14px;
  color: var(--text-muted);
  font-weight: 500;
}

/* 骨架屏效果 - iOS风格 */
.skeleton {
  background: linear-gradient(90deg, 
    rgba(240, 249, 255, 0.8) 0%, 
    rgba(224, 242, 254, 0.9) 50%, 
    rgba(240, 249, 255, 0.8) 100%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: var(--radius-md);
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.skeleton-card {
  position: relative;
  padding: var(--space-xl);
  border-radius: var(--radius-xl);
  background: var(--bg-card);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  box-shadow: var(--shadow-glass);
  border: 1px solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
}

.skeleton-icon {
  width: 56px;
  height: 56px;
  margin: 0 auto var(--space-md);
  border-radius: var(--radius-lg);
}

.skeleton-title {
  height: 20px;
  width: 80%;
  margin: 0 auto var(--space-xs);
}

.skeleton-subtitle {
  height: 16px;
  width: 60%;
  margin: 0 auto;
}

.skeleton-featured {
  display: flex;
  padding: var(--space-lg);
  background: var(--bg-card);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-glass);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.skeleton-cover {
  width: 80px;
  height: 80px;
  margin-right: var(--space-lg);
  border-radius: var(--radius-lg);
  flex-shrink: 0;
}

.skeleton-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: var(--space-sm);
}

.skeleton-line {
  height: 16px;
  border-radius: var(--radius-sm);
}

.skeleton-line.long {
  width: 100%;
}

.skeleton-line.medium {
  width: 70%;
}

.skeleton-line.short {
  width: 40%;
}


/* 底部加载区域 */
.bottom-loader {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px 60px;
}

.loader-icon {
  width: 86px;
  height: 53px;
  margin-bottom: 20px;
}

.loader-text {
  font-size: 14px;
  color: #0884FF;
  font-weight: 400;
  text-align: center;
}


/* 手势反馈 */
.gesture-feedback {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1000;
}

.swipe-indicator {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-lg);
  background: var(--bg-glass);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: var(--radius-xl);
  border: 1px solid rgba(255, 255, 255, 0.3);
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-lg);
}

.swipe-indicator.left {
  left: var(--space-lg);
}

.swipe-indicator.right {
  right: var(--space-lg);
}

.swipe-indicator.active {
  opacity: 1;
  transform: translateY(-50%) scale(1.05);
}

.swipe-icon {
  font-size: 24px !important;
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
}

.swipe-indicator text {
  font-size: 12px;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 微交互动画 - iOS风格 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* 页面加载动画 */
.category-card {
  animation: fadeInUp 0.5s ease-out backwards;
}

.category-card:nth-child(1) { animation-delay: 0.05s; }
.category-card:nth-child(2) { animation-delay: 0.1s; }
.category-card:nth-child(3) { animation-delay: 0.15s; }
.category-card:nth-child(4) { animation-delay: 0.2s; }
.category-card:nth-child(5) { animation-delay: 0.25s; }
.category-card:nth-child(6) { animation-delay: 0.3s; }
.category-card:nth-child(7) { animation-delay: 0.35s; }

.featured-card {
  animation: fadeInUp 0.5s ease-out backwards;
}

.featured-card:nth-child(1) { animation-delay: 0.1s; }
.featured-card:nth-child(2) { animation-delay: 0.2s; }
.featured-card:nth-child(3) { animation-delay: 0.3s; }

.ranking-card {
  animation: scaleIn 0.4s ease-out backwards;
}

.ranking-card:nth-child(1) { animation-delay: 0.1s; }
.ranking-card:nth-child(2) { animation-delay: 0.2s; }
.ranking-card:nth-child(3) { animation-delay: 0.3s; }

/* 刷新按钮旋转动画 */
.refresh-btn:active .refresh-icon {
  animation: rotate360 0.6s ease-in-out;
}

@keyframes rotate360 {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 点击波纹效果 */
.category-card,
.featured-card,
.ranking-item {
  position: relative;
  overflow: hidden;
}

.category-card::after,
.featured-card::after,
.ranking-item::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.category-card:active::after,
.featured-card:active::after,
.ranking-item:active::after {
  width: 300%;
  height: 300%;
}

/* 搜索栏聚焦动画 */
.search-bar {
  position: relative;
}

.search-bar::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--blue-gradient);
  transform: translateX(-50%);
  transition: width 0.3s ease;
}

.search-bar:active::after {
  width: 100%;
}

/* 图标悬浮效果增强 */
.category-icon-wrapper {
  position: relative;
}

.category-icon-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: inherit;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.8) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.category-card:active .category-icon-wrapper::before {
  opacity: 1;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .categories-grid {
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: var(--space-md);
  }

  .category-card {
    padding: var(--space-lg);
  }

  .featured-card {
    padding: var(--space-md);
  }

  .featured-cover {
    width: 60px;
    height: 60px;
    margin-right: var(--space-md);
  }
}

@media (min-width: 768px) {
  .categories-grid {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  .rankings-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
  }
}