/* miniprogram/pages/category/category.wxss */
page {
  --bg-color: #Fdfbf7;
  --text-main: #1a1a1a;
  --text-gray: #666666;
  --paper-white: rgba(253, 251, 247, 0.65);
  --border-light: rgba(26, 26, 26, 0.08);
  --theme-blue: #0884FF; /* 奇迹蓝 */
  --theme-blue-fade: rgba(8, 132, 255, 0.1);
}

.category-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  color: var(--text-main);
  padding-bottom: 96px; /* Space for tab bar */
  position: relative;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

/* Background Pattern */
.bg-paper-pattern {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  background-image: radial-gradient(#a3a3a3 0.5px, transparent 0.5px), radial-gradient(#a3a3a3 0.5px, #Fdfbf7 0.5px);
  background-size: 20px 20px;
  background-position: 0 0, 10px 10px;
  opacity: 0.6;
  pointer-events: none;
}

/* Utility: Frosted Paper */
.frosted-paper {
  background-color: var(--paper-white);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border: 1px solid var(--border-light);
  box-shadow: 0 4px 20px -2px rgba(0, 0, 0, 0.05);
}

/* Utility: Font Styles */
.font-serif {
  font-family: 'Times New Roman', serif; /* Fallback for Playfair Display */
  font-weight: 700;
  letter-spacing: -0.5px;
}

.italic {
  font-style: italic;
}

.font-mono {
  font-family: monospace;
}

/* 1. Search Section */
.search-sticky-header {
  position: sticky;
  top: 0;
  z-index: 50;
  padding: 16px 20px 8px;
}

.search-bar-frosted {
  border-radius: 999px;
  display: flex;
  align-items: center;
  padding: 12px 16px;
  transition: transform 0.2s;
  border: 1px solid rgba(8, 132, 255, 0.15); /* 微弱的蓝色边框点缀 */
}

.search-bar-frosted:active {
  transform: scale(0.98);
  border-color: var(--theme-blue);
}

.search-icon {
  font-size: 20px;
  color: var(--theme-blue); /* 搜索图标使用主题色 */
  opacity: 0.8;
}

.search-input-placeholder {
  margin-left: 12px;
  font-family: 'Times New Roman', serif;
  font-style: italic;
  color: #6b7280;
  font-size: 15px;
}

/* 2. Section Headers */
.section-header {
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 16px;
}

.section-title {
  font-size: 24px;
  color: #1a1a1a;
  line-height: 1.2;
  position: relative;
}

/* 标题装饰点 - 蓝色圆点 */
.section-title::after {
  content: '';
  position: absolute;
  top: 0;
  right: -8px;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background-color: var(--theme-blue);
  opacity: 0.8;
}

.section-subtitle {
  font-size: 10px;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: #6b7280;
  border-bottom: 1px solid rgba(8, 132, 255, 0.3); /* 底部线条改为淡蓝色 */
  padding-bottom: 2px;
  font-weight: 500;
}

.items-center {
  align-items: center !important;
}

/* 3. Academic Categories */
.academic-section {
  margin-top: 24px;
}

.categories-scroll {
  width: 100%;
  white-space: nowrap;
}

.categories-scroll-content {
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 16px;
  display: inline-block;
}

.categories-grid {
  display: grid;
  grid-template-rows: repeat(2, 1fr);
  grid-auto-flow: column;
  gap: 12px;
}

.category-card-frosted {
  width: 160px;
  height: 64px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: background-color 0.2s;
}

.category-card-frosted:active {
  background-color: var(--theme-blue-fade);
  border-color: rgba(8, 132, 255, 0.2);
}

.category-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4px;
  background-color: var(--theme-blue); /* 这里的指示条必须是主题色 */
  height: 50%;
  transition: height 0.3s;
  opacity: 0.8;
}

.category-card-frosted:active .category-indicator {
  height: 100%;
  opacity: 1;
}

.category-name {
  font-size: 14px;
  font-weight: 500;
  color: #1f2937;
}

/* 4. Featured Section */
.featured-section {
  padding: 0 20px;
  margin-top: 24px;
}

.refresh-btn-frosted {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  font-family: monospace;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 999px;
  padding: 4px 12px;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(4px);
  color: var(--theme-blue); /* 按钮文字主题色 */
}

.refresh-btn-frosted:active {
  background-color: var(--theme-blue);
  color: #fff;
  border-color: var(--theme-blue);
}

.refresh-icon {
  font-size: 12px;
}

.featured-content {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.featured-card-large {
  position: relative;
  width: 100%;
  aspect-ratio: 4/5;
  border-radius: 32px;
  overflow: hidden;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

@media (min-width: 768px) {
  .featured-card-large {
    aspect-ratio: 16/9;
  }
}

.featured-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.7s;
}

.featured-card-large:active .featured-bg-image {
  transform: scale(1.05);
}

.play-button-glass {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  color: var(--theme-blue); /* 播放按钮主题色 */
  z-index: 20;
}

.play-button-glass:active {
  background-color: var(--theme-blue);
  color: white;
}

.featured-info-glass {
  position: absolute;
  bottom: 16px;
  left: 16px;
  right: 16px;
  padding: 20px;
  border-radius: 16px;
  display: flex;
  flex-direction: column;
  gap: 8px;
  /* 移除左边框，改用渐变边框和内阴影 */
  border: 1px solid rgba(8, 132, 255, 0.12);
  box-shadow:
    0 8px 32px -8px rgba(8, 132, 255, 0.15),
    0 0 0 1px rgba(255, 255, 255, 0.5) inset,
    0 2px 8px rgba(8, 132, 255, 0.08);
  /* 渐变叠加效果 */
  background:
    linear-gradient(135deg, rgba(8, 132, 255, 0.03) 0%, transparent 50%),
    var(--paper-white);
  background-blend-mode: soft-light, normal;
}

.featured-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 4px;
}

.featured-tag {
  padding: 3px 8px;
  border: 1.5px solid var(--theme-blue);
  color: var(--theme-blue);
  font-size: 10px;
  font-family: monospace;
  font-weight: bold;
  text-transform: uppercase;
  border-radius: 6px;
  background: linear-gradient(135deg, rgba(8, 132, 255, 0.08) 0%, rgba(8, 132, 255, 0.02) 100%);
  box-shadow: 0 2px 4px rgba(8, 132, 255, 0.1);
  letter-spacing: 0.5px;
}

.featured-read-time {
  font-size: 10px;
  color: #6b7280;
  font-family: monospace;
}

.featured-title-large {
  font-size: 20px;
  line-height: 1.25;
  color: #1a1a1a;
  text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
  font-weight: 600;
}

.featured-desc {
  font-size: 12px;
  color: #4b5563;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  opacity: 0.9;
}

.featured-meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
  padding-top: 10px;
  border-top: 1px solid rgba(8, 132, 255, 0.08);
  gap: 12px;
}

.channel-info {
  display: flex;
  align-items: center;
  gap: 8px;
}

.channel-avatar {
  width: 22px;
  height: 22px;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(8, 132, 255, 0.15) 0%, rgba(8, 132, 255, 0.05) 100%);
  border: 1.5px solid rgba(8, 132, 255, 0.2);
  box-shadow: 0 2px 4px rgba(8, 132, 255, 0.1);
}

.channel-name {
  font-size: 12px;
  font-weight: 600;
  color: #1f2937;
  letter-spacing: -0.2px;
}

.vol-text {
  font-size: 10px;
  font-family: monospace;
  color: var(--theme-blue);
  padding: 3px 8px;
  background: rgba(8, 132, 255, 0.06);
  border-radius: 6px;
  font-weight: 500;
  letter-spacing: 0.3px;
  white-space: nowrap;
}

/* 5. Rankings Section */
.rankings-section {
  padding: 0 20px;
  margin-top: 40px;
}

.tabs-pill {
  display: flex;
  padding: 4px;
  background-color: rgba(229, 231, 235, 0.5);
  border-radius: 12px;
  margin-bottom: 24px;
  backdrop-filter: blur(4px);
}

.tab-item {
  flex: 1;
  padding: 8px 0;
  text-align: center;
  font-size: 12px;
  font-weight: 500;
  color: #6b7280;
  border-radius: 8px;
  transition: all 0.2s;
}

.tab-item.active {
  background-color: #Fdfbf7;
  color: var(--theme-blue); /* 选中Tab变蓝 */
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  font-weight: 700;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.ranking-item-row {
  display: flex;
  align-items: center;
  padding: 12px;
  border-radius: 16px;
  border: 1px solid transparent;
  transition: all 0.2s;
}

.ranking-item-row:active {
  background-color: var(--theme-blue-fade);
  border-color: rgba(8, 132, 255, 0.1);
  transform: scale(0.99);
}

.rank-num-serif {
  font-family: 'Times New Roman', serif;
  font-weight: 700;
  font-size: 24px;
  font-style: italic;
  color: #d1d5db;
  width: 40px;
  text-align: center;
}

.rank-num-serif.top3 {
  color: var(--theme-blue); /* 前三名用主题色 */
}

.rank-info {
  flex: 1;
  margin-left: 8px;
  margin-right: 8px;
}

.rank-title-text {
  font-size: 14px;
  font-weight: 600;
  color: #111827;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.rank-play-count {
  font-size: 10px;
  color: #6b7280;
  font-family: monospace;
  margin-top: 2px;
}

.rank-play-btn {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(0, 0, 0, 0.5);
}

.ranking-item-row:active .rank-play-btn {
  background-color: var(--theme-blue);
  color: #fff;
  border-color: var(--theme-blue);
}

.view-full-btn {
  margin-top: 16px;
  padding: 12px;
  text-align: center;
  border-top: 1px solid rgba(8, 132, 255, 0.1);
  font-size: 12px;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: var(--theme-blue); /* 查看全部按钮用主题色 */
  opacity: 0.8;
}

.view-full-btn:active {
  opacity: 1;
  background-color: var(--theme-blue-fade);
}

/* 6. Bottom Loader - 保留公司 Logo + 奇迹蓝 */
.bottom-loader {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 20px 48px;
  position: relative;
}

.loader-icon {
  width: 72px;
  height: 45px;
  margin-bottom: 16px;
  filter: drop-shadow(0 2px 8px rgba(8, 132, 255, 0.2));
  animation: logoPulse 2s ease-in-out infinite;
}

.loader-text {
  font-size: 13px;
  color: var(--theme-blue); /* 奇迹蓝 */
  font-weight: 400;
  text-align: center;
  padding: 8px 16px;
  border-radius: 12px;
  background: rgba(8, 132, 255, 0.05); /* 奇迹蓝淡背景 */
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(8, 132, 255, 0.15); /* 奇迹蓝淡边框 */
}

@keyframes logoPulse {
  0%, 100% { 
    opacity: 1;
    transform: scale(1);
  }
  50% { 
    opacity: 0.8;
    transform: scale(0.98);
  }
}

/* 7. Gesture Feedback */
.gesture-feedback {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 140rpx); /* 避免与 tabBar 重叠 */
  left: 50%;
  transform: translateX(-50%);
  z-index: 40;
  display: flex;
  gap: 32rpx;
  pointer-events: none;
}

.gesture-pill {
  padding: 16rpx 32rpx;
  border-radius: 999px;
  display: flex;
  align-items: center;
  gap: 8rpx;
  opacity: 0.8;
  box-shadow: 0 20rpx 30rpx -6rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s, opacity 0.2s;
}

.gesture-pill.active {
  transform: scale(1.15);
  opacity: 1;
  background-color: var(--theme-blue);
  color: white;
}

.gesture-text {
  font-size: 24rpx;
  font-weight: bold;
}

.gesture-icon {
  font-size: 28rpx;
}

/* Skeleton Loading Helpers */
.skeleton {
  background: linear-gradient(90deg, rgba(8, 132, 255, 0.03) 25%, rgba(8, 132, 255, 0.08) 50%, rgba(8, 132, 255, 0.03) 75%); /* 骨架屏也带点蓝调 */
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}
