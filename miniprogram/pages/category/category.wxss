/* 分类页面样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background: white;
  position: relative;
  padding-bottom: 90px; /* 留出底部导航空间 */
}

/* Header */
.header {
  padding: 44px 20px 0;
  background: white;
  border-bottom: 1px solid #f0f0f0;
}

.search-bar {
  position: relative;
  margin-bottom: 20px;
}

.search-input {
  width: 100%;
  height: 42px;
  background: #F3F3F3;
  border: none;
  border-radius: 10px;
  padding-left: 44px;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
}

.search-icon {
  position: absolute;
  left: 12px;
  top: 9px;
  width: 24px;
  height: 24px;
}

/* Tab Navigation */
.tab-nav {
  display: flex;
  justify-content: space-around;
  padding: 0 35px;
  margin-bottom: 20px;
}

.tab {
  font-size: 17px;
  font-weight: 400;
  color: #85C2FF;
  padding: 10px 0;
  position: relative;
}

.tab.active {
  color: #0884FF;
  font-weight: 700;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 2px;
  background: #0884FF;
}

/* Rankings Section */
.section {
  padding: 20px 0;
}

.section-title {
  font-size: 17px;
  font-weight: 400;
  color: #0884FF;
  margin: 0 35px 15px;
  display: block;
}

.ranking-item {
  display: flex;
  padding: 12px 35px;
  border-bottom: 1px solid #f8f8f8;
  align-items: center;
}

.ranking-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.ranking-number {
  width: 40px;
  height: 40px;
  background: #F2F2F7;
  border-radius: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  font-weight: 510;
  color: rgba(0, 0, 0, 0.5);
  margin-right: 15px;
}

.ranking-content {
  flex: 1;
}

.ranking-title {
  font-size: 15px;
  font-weight: 510;
  color: rgba(0, 0, 0, 0.9);
  margin-bottom: 4px;
}

.ranking-channel {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.5);
}

.ranking-play {
  width: 24px;
  height: 24px;
  margin-left: 15px;
}

/* View More Button */
.view-more {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 35px;
  padding: 8px 20px;
  background: #F2F2F7;
  border-radius: 10px;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.3);
}

.view-more:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.view-more image {
  margin-left: 8px;
  width: 16px;
  height: 16px;
}

/* Recommended Papers */
.paper-item {
  display: flex;
  padding: 15px 35px;
  border-bottom: 1px solid #f8f8f8;
}

.paper-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.paper-thumbnail {
  width: 51px;
  height: 68px;
  background: #f0f0f0;
  border-radius: 4px;
  margin-right: 15px;
  flex-shrink: 0;
}

.paper-info {
  flex: 1;
}

.paper-title {
  font-size: 12px;
  font-weight: 400;
  color: black;
  margin-bottom: 3px;
}

.paper-team {
  font-size: 12px;
  color: black;
  margin-bottom: 8px;
}

.paper-abstract {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.3);
  line-height: 1.4;
}

/* Categories Section */
.categories {
  padding: 15px 0;
}

.category-grid {
  display: flex;
  white-space: nowrap;
  padding: 0 20px;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 12px;
  flex-shrink: 0;
  min-width: 72px;
}

.category-item:first-child {
  margin-left: 15px;
}

.category-item:last-child {
  margin-right: 35px;
}

.category-item:active {
  opacity: 0.7;
}

.category-icon {
  width: 72px;
  height: 89px;
  background: white;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.category-icon image {
  width: 48px;
  height: 48px;
  object-fit: contain;
}

.category-label {
  font-size: 17px;
  color: rgba(0, 0, 0, 0.9);
  font-weight: 400;
  font-family: 'SF Pro';
}

/* Featured Section */
.featured-section {
  padding: 20px 0;
}

.featured-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 35px 15px;
}

.featured-header .section-title {
  margin: 0;
}

.refresh-btn {
  display: flex;
  align-items: center;
  padding: 5px 12px;
  background: #F2F2F7;
  border-radius: 10px;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.3);
}

.refresh-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.refresh-btn image {
  margin-right: 8px;
  width: 20px;
  height: 20px;
}

.podcast-item {
  display: flex;
  padding: 15px 35px;
  border-bottom: 1px solid #f8f8f8;
}

.podcast-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.podcast-cover {
  width: 72px;
  height: 72px;
  background: #f0f0f0;
  border-radius: 4px;
  margin-right: 15px;
  flex-shrink: 0;
}

.podcast-info {
  flex: 1;
}

.podcast-channel {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 4px;
}

.podcast-title {
  font-size: 17px;
  font-weight: 700;
  color: black;
  margin-bottom: 8px;
}

.podcast-description {
  background: rgba(0, 0, 0, 0.05);
  padding: 10px;
  border-radius: 4px;
  font-size: 15px;
  line-height: 1.4;
}

.podcast-description .highlight {
  font-weight: 700;
}

.podcast-play {
  width: 24px;
  height: 24px;
  margin-left: 15px;
}

.tab-content {
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
  opacity: 1;
  transform: translateX(0);
}

/* 页面切换动画 */
.page-transition {
  transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), opacity 0.3s ease;
}

.page-slide-left {
  transform: translateX(-100%);
  opacity: 0;
}

.page-slide-right {
  transform: translateX(100%);
  opacity: 0;
}

.page-slide-in {
  transform: translateX(0);
  opacity: 1;
}

/* 触摸反馈 */
.touch-feedback {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1000;
}

.swipe-indicator {
  position: absolute;
  top: 50%;
  width: 4px;
  height: 60px;
  background: rgba(8, 132, 255, 0.6);
  border-radius: 2px;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.swipe-indicator.left {
  left: 10px;
}

.swipe-indicator.right {
  right: 10px;
}

.swipe-indicator.active {
  opacity: 1;
}

/* 底部加载区域 */
.bottom-loader {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px 60px;
  background: white;
}

.loader-icon {
  width: 86px;
  height: 53px;
  margin-bottom: 20px;
}

.loader-text {
  font-size: 14px;
  color: #0884FF;
  font-weight: 400;
  text-align: center;
}