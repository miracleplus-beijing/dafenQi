/* 个人中心页面 - Frosted Paper Theme */

/* === 1. CSS变量系统 (Theme Variables) === */
page {
  /* --- 核心色板 --- */
  /* 背景色 - 纸张白 */
  --bg-paper: #Fdfbf7;

  /* 主题色 - 科技蓝 (8, 132, 255) 的变体 */
  --primary-blue: rgb(8, 132, 255);
  --primary-blue-light: rgba(8, 132, 255, 0.1);
  --primary-blue-glow: rgba(8, 132, 255, 0.3);

  /* 文字颜色 */
  --text-main: #1a1a1a;
  --text-secondary: #4a5568;
  --text-tertiary: #718096;
  --text-muted: #a0aec0;

  /* 装饰色 */
  --color-red: #ef4444;
  --color-green: #10b981;
  --color-orange: #f97316;
  --color-gray: #6b7280;

  /* --- 布局尺寸 --- */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;

  /* --- 效果参数 --- */
  --blur-glass: 48rpx;
  --radius-panel: 48rpx;
  --radius-card: 64rpx;
  --radius-button: 999px;

  /* 基础设置 */
  background-color: var(--bg-paper);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  box-sizing: border-box;
}

/* === 2. 全局背景与纹理 (Background & Texture) === */
.profile-container {
  min-height: 100vh;
  position: relative;
  background-color: var(--bg-paper);
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
}

/* 纸张纹理 - 点阵 */
.bg-paper-pattern {
  position: fixed;
  inset: 0;
  width: 100%;
  height: 100%;
  /* 使用径向渐变模拟点阵纸 */
  background-image:
    radial-gradient(#a3a3a3 1rpx, transparent 1rpx),
    radial-gradient(#a3a3a3 1rpx, var(--bg-paper) 1rpx);
  background-size: 40rpx 40rpx;
  background-position: 0 0, 20rpx 20rpx;
  opacity: 0.6;
  pointer-events: none;
  z-index: 0;
}

/* 背景装饰光斑 (Blobs) */
.bg-decoration-blob {
  position: fixed;
  border-radius: 50%;
  filter: blur(160rpx);
  mix-blend-mode: multiply;
  opacity: 0.7;
  z-index: 0;
  pointer-events: none;
  animation: blobPulse 8s infinite alternate;
}

.blob-1 {
  top: -10%;
  right: -20%;
  width: 600rpx;
  height: 600rpx;
  background: rgba(8, 132, 255, 0.2);
}

.blob-2 {
  bottom: -10%;
  left: -20%;
  width: 600rpx;
  height: 600rpx;
  background: rgba(100, 200, 255, 0.3);
  animation-delay: 2s;
}

@keyframes blobPulse {
  0% { transform: scale(1); opacity: 0.7; }
  100% { transform: scale(1.1); opacity: 0.5; }
}

/* === 3. 磨砂纸感核心类 === */
.frosted-paper {
  background-color: rgba(253, 251, 247, 0.75);
  backdrop-filter: blur(48rpx);
  -webkit-backdrop-filter: blur(48rpx);
  border: 1px solid rgba(8, 132, 255, 0.08);
  box-shadow:
    0 20rpx 60rpx -10rpx rgba(8, 132, 255, 0.08),
    inset 0 0 0 2rpx rgba(255, 255, 255, 0.6);
}

/* === 4. 已登录视图 (Logged In View) === */
.logged-in-view {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 60rpx) 32rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

/* 用户信息卡片 */
.user-card {
  padding: 80rpx 48rpx;
  border-radius: var(--radius-card);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
}

/* 装饰性背景光 */
.card-decoration-light {
  position: absolute;
  right: 0;
  top: 0;
  width: 256rpx;
  height: 256rpx;
  background: rgba(8, 132, 255, 0.1);
  border-radius: 50%;
  filter: blur(80rpx);
  margin-right: -80rpx;
  margin-top: -80rpx;
  pointer-events: none;
}

/* 头像 */
.avatar-wrapper {
  position: relative;
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  z-index: 10;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-border {
  width: 160rpx;
  height: 160rpx;
  padding: 8rpx;
  border-radius: 50%;
  border: 1px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8rpx);
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

/* 编辑提示 */
.avatar-edit-hint {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f3f4f6;
  color: var(--primary-blue);
}

/* 用户名/ID */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  z-index: 10;
}

.user-name {
  font-family: 'Times New Roman', serif;
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1.2;
  letter-spacing: -0.5rpx;
}

.font-serif-display {
  font-family: 'Times New Roman', serif;
  font-weight: bold;
}

.user-id-badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-button);
  background: rgba(8, 132, 255, 0.08);
  border: 1px solid rgba(8, 132, 255, 0.1);
}

.user-id-text {
  font-size: 20rpx;
  font-family: monospace;
  color: var(--primary-blue);
  letter-spacing: 2rpx;
  font-weight: 600;
}

/* === 5. 菜单区域 === */
.menu-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-title {
  font-size: 40rpx;
  color: var(--text-secondary);
  padding: 0 16rpx;
  font-style: italic;
}

.menu-group {
  border-radius: var(--radius-panel);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid rgba(8, 132, 255, 0.05);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.menu-item:active {
  background-color: rgba(8, 132, 255, 0.05);
  transform: scale(0.99);
}

.menu-item-last {
  border-bottom: none;
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  color: #ffffff;
}

.menu-icon-wrapper.blue {
  background: linear-gradient(135deg, #0884ff 0%, #3b9eff 100%);
}

.menu-icon-wrapper.red {
  background: linear-gradient(135deg, var(--color-red) 0%, #fca5a5 100%);
}

.menu-icon-wrapper.green {
  background: linear-gradient(135deg, var(--color-green) 0%, #6ee7b7 100%);
}

.menu-icon-wrapper.gray {
  background: linear-gradient(135deg, var(--color-gray) 0%, #9ca3af 100%);
}

.menu-icon-wrapper.orange {
  background: linear-gradient(135deg, var(--color-orange) 0%, #fdba74 100%);
}

.menu-label {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-secondary);
}

.logout-text {
  color: var(--color-orange);
}

.menu-arrow {
  color: var(--text-muted);
  opacity: 0.5;
}

/* === 6. 未登录视图 (Logged Out View) === */
.login-view {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 160rpx 64rpx;
  position: relative;
  z-index: 1;
}

/* 登录卡片专用 - 更强的玻璃感 */
.login-card {
  width: 100%;
  border-radius: var(--radius-card);
  padding: 80rpx 64rpx 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 50rpx 100rpx -24rpx rgba(8, 132, 255, 0.15);
  animation: fadeInUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.login-card-glass {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(80rpx);
  -webkit-backdrop-filter: blur(80rpx);
  border: 1px solid rgba(255, 255, 255, 0.8);
  box-shadow:
    0 50rpx 100rpx -24rpx rgba(8, 132, 255, 0.15),
    inset 0 0 0 2rpx rgba(255, 255, 255, 0.5);
}

/* 装饰光效 */
.login-decoration-gradient {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.4), transparent);
  pointer-events: none;
}

.login-decoration-blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  pointer-events: none;
}

.login-blob-1 {
  top: -100rpx;
  left: -100rpx;
  width: 384rpx;
  height: 384rpx;
  background: rgba(8, 132, 255, 0.15);
  animation: blobPulse 4s infinite ease-in-out;
}

.login-blob-2 {
  bottom: -40rpx;
  right: -40rpx;
  width: 256rpx;
  height: 256rpx;
  background: rgba(100, 200, 255, 0.2);
}

/* Hero Icon */
.login-icon-wrapper {
  width: 192rpx;
  height: 192rpx;
  background: linear-gradient(135deg, var(--primary-blue) 0%, #3b9eff 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 64rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(8, 132, 255, 0.3);
  position: relative;
  z-index: 10;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
}

/* Title */
.login-title {
  font-size: 60rpx;
  font-weight: 700;
  color: var(--text-main);
  letter-spacing: -1rpx;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 10;
}

.login-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 80rpx;
  line-height: 1.5;
  max-width: 400rpx;
  position: relative;
  z-index: 10;
  font-weight: 500;
}

/* Features List */
.login-features {
  width: 100%;
  margin-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  text-align: left;
  position: relative;
  z-index: 10;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding: 16rpx;
  border-radius: 24rpx;
  transition: background-color 0.2s;
}

.feature-item:active {
  background-color: rgba(255, 255, 255, 0.4);
}

.feature-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(16, 185, 129, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-green);
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.2);
  border: 1px solid rgba(16, 185, 129, 0.2);
  flex-shrink: 0;
}

.feature-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Login Button */
.login-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
  border: none;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 40rpx -20rpx rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  margin: 0;
  padding: 0;
  position: relative;
  z-index: 10;
  letter-spacing: 4rpx;
}

.login-button::after {
  border: none;
}

.login-button:active {
  transform: scale(0.98);
  box-shadow: 0 10rpx 20rpx -10rpx rgba(0, 0, 0, 0.4);
  background: #000000;
}

/* === 7. 手势反馈 === */
.gesture-feedback {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 140rpx);
  left: 50%;
  transform: translateX(-50%);
  z-index: 40;
  display: flex;
  gap: 32rpx;
  pointer-events: none;
}

.gesture-pill {
  padding: 16rpx 32rpx;
  border-radius: 999px;
  display: flex;
  align-items: center;
  gap: 8rpx;
  opacity: 0.8;
  box-shadow: 0 20rpx 30rpx -6rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s, opacity 0.2s;
}

.gesture-pill.active {
  transform: scale(1.15);
  opacity: 1;
  background-color: var(--primary-blue);
  color: white;
}

.gesture-text {
  font-size: 24rpx;
  font-weight: bold;
}

.gesture-icon {
  font-size: 28rpx;
}

/* === 8. 动画 === */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* === 9. 响应式设计 === */
@media (max-width: 375px) {
  .user-card {
    padding: 60rpx 32rpx;
  }

  .avatar-wrapper,
  .avatar-border {
    width: 140rpx;
    height: 140rpx;
  }

  .user-name {
    font-size: 44rpx;
  }

  .login-card {
    padding: 64rpx 48rpx 48rpx;
  }

  .login-title {
    font-size: 52rpx;
  }
}
