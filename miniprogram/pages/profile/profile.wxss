/* 页面容器 */
.profile-container {
  min-height: 100vh;
  background: var(--gradient-bg-blue); /* 全局蓝白渐变背景 */
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* ========================================
   1. 用户信息区域 (User Header)
   ======================================== */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 120rpx 48rpx 60rpx; /* 顶部留白，符合小宇宙风格 */
}

.user-info-left {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 56rpx; /* 大字号标题 */
  font-weight: 700;
  color: var(--color-text-primary);
  line-height: 1.2;
}

.user-desc {
  font-size: 26rpx;
  color: var(--color-text-tertiary);
  font-weight: 400;
}

/* 头像按钮 */
.avatar-btn {
  margin: 0;
  padding: 0;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: transparent;
  box-shadow: var(--shadow-md);
  transition: transform 0.2s ease;
}

.avatar-btn:active {
  transform: scale(0.95);
}

.avatar-btn::after {
  border: none;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

/* ========================================
   2. 菜单列表 (Menu Card)
   ======================================== */
.menu-card {
  margin: 0 32rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm); /* 微妙阴影 */
}

/* 覆盖 TDesign Cell 样式，使其背景透明或白色 */
.menu-card .t-cell-group {
  background-color: transparent;
}

.menu-card .t-cell {
  background-color: #fff;
  padding: 32rpx !important;
}

.menu-card .t-cell__title-text {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text-primary);
}



/* ========================================
   4. 未登录状态 (Login Card)
   ======================================== */
.login-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
  z-index: 100;
  background: var(--gradient-bg-blue);
}

.login-card {
  width: 100%;
  max-width: 630rpx;
  background: #fff;
  border-radius: var(--radius-lg);
  padding: 64rpx 48rpx 48rpx;
  box-shadow: var(--shadow-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInUp 0.6s var(--ease-out);
}

.login-icon-bg {
  width: 120rpx;
  height: 120rpx;
  background: var(--gradient-primary); /* 蓝白渐变 */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-btn-primary);
  margin-bottom: 32rpx;
}

.login-icon {
  width: 64rpx;
  height: 64rpx;
  filter: brightness(0) invert(1);
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 40rpx;
}

.login-benefits {
  width: 100%;
  margin-bottom: 48rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 16rpx;
}

.benefit-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 登录按钮样式覆盖 */
.login-btn .t-button {
  width: 100%;
  height: 88rpx;
  background: var(--gradient-blue) !important; /* 蓝色渐变 */
  border: none !important;
  border-radius: var(--radius-md) !important;
  box-shadow: var(--shadow-btn-primary);
  font-size: 32rpx;
  font-weight: 600;
}

.login-btn .t-button:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-btn-primary-hover);
}

/* 动画 */
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 触摸反馈 */
.touch-feedback {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1000;
}

.swipe-indicator {
  position: absolute;
  top: 50%;
  width: 4px;
  height: 60px;
  background: var(--color-primary);
  border-radius: 2px;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.swipe-indicator.left { left: 10px; }
.swipe-indicator.right { right: 10px; }
.swipe-indicator.active { opacity: 1; }
