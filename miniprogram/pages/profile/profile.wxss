/* 我的页面样式 */
.profile-container {
    width: 100vw;
    min-height: 100vh;
    background: white;
    position: relative;
    overflow: hidden;
}



/* 全页面 text 样式 */
text {
    text-shadow: 0 6rpx 8rpx rgba(0, 0, 0, 0.2);
    font-weight: 400;
    font-size: 34rpx;
}

.user-section {
    z-index: 2;
    background: #b5dbff;
    padding: 80rpx 60rpx 0;
    width: 100%;
    height: 380rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40rpx;
}

.login-prompt {
    color: white;
    font-size: 44rpx;
    font-weight: 550;
}

.user-info {
    flex: 1;
}

.user-name {
    margin-bottom: 8rpx;
    cursor: pointer;
    transition: opacity 0.2s ease;
}

.user-name:active {
    background-color: rgba(255, 255, 255, 0.2);
}

.user-id {
    font-size: 26rpx;
    font-weight: 400;
    display: block;
    opacity: 0.75;
}

.avatar-container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
}

.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    background: #f0f0f0;
    cursor: pointer;
    transition: transform 0.2s ease;
}

.avatar:active {
    transform: scale(0.95);
}

.avatar-edit-hint {
    font-size: 22rpx;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 8rpx;
    text-align: center;
}

/* 菜单项区域 */
.menu-section {
    position: relative;
    z-index: 2;
    background: white;
    padding: 0 60rpx;
    margin-top: 10rpx;
}

.menu-list {
    background: white;
    border-radius: 0;
}

.menu-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 32rpx 0;
    border-bottom: 1rpx solid #F0F0F0;
    transition: background-color 0.2s ease;
}

.menu-item:last-child {
    border-bottom: none;
}

.menu-item:active {
    background-color: rgba(0, 0, 0, 0.03);
}

.menu-text {
    font-family: 'PingFang SC', sans-serif;
    font-weight: 400;
    color: #333333;
}

.menu-arrow {
    font-size: 70rpx;
    color: #CCCCCC;
    font-weight: 300;
    line-height: 0.65;
}


.logout-btn {
    margin: 80rpx auto 0;
    width: 332rpx;
    height: 120rpx;
    background: rgba(217, 217, 217, 0.7);
    border-radius: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.logout-btn:active {
    background: #E8E8E8;
    transform: scale(0.98);
}

.logout-text {
    color: #FF3B30;
    font-family: 'PingFang SC', sans-serif;
    font-weight: 400;
}

/* 分割线 */
.section-divider {
    width: 100%;
    height: 10px;
    background: #f5f5f5;
    margin: 10px 0;
}

/* 未登录提示 */
.login-tips {
    position: relative;
    z-index: 2;
    background: white;
    border-radius: 16px 16px 0 0;
    margin-top: -20px;
    padding: 40px 20px;
    box-shadow: 0 -2px 16px rgba(0, 0, 0, 0.1);
}

.tips-content {
    text-align: center;
}

.tips-icon {
    width: 64px;
    height: 64px;
    opacity: 0.3;
    margin-bottom: 16px;
}

.tips-text {
    font-size: 18px;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.7);
    margin-bottom: 24px;
    display: block;
}

.tips-list {
    text-align: left;
    margin-bottom: 32px;
}

.tip-item {
    display: block;
    font-size: 14px;
    color: rgba(0, 0, 0, 0.5);
    margin-bottom: 8px;
    padding-left: 20px;
}

.login-btn {
    width: 200px;
    height: 44px;
    background: #0884FF;
    color: white;
    border: none;
    border-radius: 22px;
    font-size: 16px;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}

.login-btn:active {
    background: #0666CC;
    transform: scale(0.98);
}

/* 页面切换动画 */
.page-transition {
    transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), opacity 0.3s ease;
}

.page-slide-left {
    transform: translateX(-100%);
    opacity: 0;
}

.page-slide-right {
    transform: translateX(100%);
    opacity: 0;
}

.page-slide-in {
    transform: translateX(0);
    opacity: 1;
}

/* 触摸反馈 */
.touch-feedback {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1000;
}

.swipe-indicator {
    position: absolute;
    top: 50%;
    width: 4px;
    height: 60px;
    background: rgba(8, 132, 255, 0.6);
    border-radius: 2px;
    transform: translateY(-50%);
    opacity: 0;
    transition: opacity 0.2s ease;
}

.swipe-indicator.left {
    left: 10px;
}

.swipe-indicator.right {
    right: 10px;
}

.swipe-indicator.active {
    opacity: 1;
}

.avatar-btn {
    background-color: inherit;
    width: auto;
    border: none;
    outline: none;
}

#profileChooseAvatarBtn::after,
.avatar-btn::after {
    border: 0 !important;
    content: none !important; /* 不再渲染伪元素 */
    transform: none !important; /* 防止缩放影响点击区域 */
    -webkit-transform: none !important;
    width: 0 !important;
    height: 0 !important;
    box-shadow: none !important;
}
