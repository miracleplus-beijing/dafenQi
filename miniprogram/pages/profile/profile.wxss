/* 我的页面样式 */
.profile-container {
  width: 100%;
  min-height: 100vh;
  background: white;
  position: relative;
  overflow: hidden;
}

/* 蓝色背景区域 */
.blue-bg {
  width: 100%;
  height: 200px;
  background: linear-gradient(135deg, #0884FF 0%, #85C2FF 100%);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* 用户区域 */
.user-section {
  position: relative;
  z-index: 2;
  padding: 60px 35px 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.login-prompt {
  color: white;
  font-size: 22px;
  font-family: SF Pro;
  font-weight: 510;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
  color: white;
}

.user-name {
  font-size: 22px;
  font-family: SF Pro;
  font-weight: 510;
  margin-bottom: 4px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  padding: 4px 8px;
  border-radius: 8px;
  transition: background-color 0.2s ease;
}

.user-name:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.user-id {
  font-size: 14px;
  font-family: SF Pro;
  font-weight: 400;
  opacity: 0.8;
}

.avatar-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  background: #f0f0f0;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.avatar:active {
  transform: scale(0.95);
}

.avatar-edit-hint {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4px;
  text-align: center;
}

/* 菜单项区域 */
.menu-section {
  position: relative;
  z-index: 2;
  background: white;
  border-radius: 16px 16px 0 0;
  margin-top: -20px;
  padding-top: 20px;
  box-shadow: 0 -2px 16px rgba(0, 0, 0, 0.1);
}

.menu-item {
  width: 100%;
  height: 60px;
  display: flex;
  align-items: center;
  padding: 0 20px;
  border-bottom: 1px solid #f5f5f5;
  transition: background-color 0.2s ease;
}

.menu-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 24px;
  height: 24px;
  margin-right: 16px;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  font-size: 16px;
  font-family: SF Pro;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.90);
}

.menu-arrow {
  width: 16px;
  height: 16px;
  opacity: 0.3;
}

/* 退出登录特殊样式 */
.logout-item {
  margin-top: 20px;
}

.logout-text {
  color: #FF4444;
}

/* 分割线 */
.section-divider {
  width: 100%;
  height: 10px;
  background: #f5f5f5;
  margin: 10px 0;
}

/* 未登录提示 */
.login-tips {
  position: relative;
  z-index: 2;
  background: white;
  border-radius: 16px 16px 0 0;
  margin-top: -20px;
  padding: 40px 20px;
  box-shadow: 0 -2px 16px rgba(0, 0, 0, 0.1);
}

.tips-content {
  text-align: center;
}

.tips-icon {
  width: 64px;
  height: 64px;
  opacity: 0.3;
  margin-bottom: 16px;
}

.tips-text {
  font-size: 18px;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.7);
  margin-bottom: 24px;
  display: block;
}

.tips-list {
  text-align: left;
  margin-bottom: 32px;
}

.tip-item {
  display: block;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 8px;
  padding-left: 20px;
}

.login-btn {
  width: 200px;
  height: 44px;
  background: #0884FF;
  color: white;
  border: none;
  border-radius: 22px;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.login-btn:active {
  background: #0666CC;
  transform: scale(0.98);
}

/* 页面切换动画 */
.page-transition {
  transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), opacity 0.3s ease;
}

.page-slide-left {
  transform: translateX(-100%);
  opacity: 0;
}

.page-slide-right {
  transform: translateX(100%);
  opacity: 0;
}

.page-slide-in {
  transform: translateX(0);
  opacity: 1;
}

/* 触摸反馈 */
.touch-feedback {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1000;
}

.swipe-indicator {
  position: absolute;
  top: 50%;
  width: 4px;
  height: 60px;
  background: rgba(8, 132, 255, 0.6);
  border-radius: 2px;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.swipe-indicator.left {
  left: 10px;
}

.swipe-indicator.right {
  right: 10px;
}

.swipe-indicator.active {
  opacity: 1;
}