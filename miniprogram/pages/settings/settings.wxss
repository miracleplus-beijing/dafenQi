/* 设置页面样式 */
.settings-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx 0;
  box-sizing: border-box;
}

/* 退出登录区域 */
.logout-section {
  margin-top: 24rpx;
}

.logout-cell {
  text-align: center;
}

.logout-text {
  color: var(--color-text-primary);
  text-align: center;
}

/* 危险区域 */
.danger-section {
  margin-top: 24rpx;
}

.danger-text {
  color: var(--color-danger);
}