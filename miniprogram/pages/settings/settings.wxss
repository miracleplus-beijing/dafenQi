/* 设置页面样式 */
.settings-container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20px 0;
}

/* 菜单项区域 */
.menu-section {
  background: white;
  border-radius: 16px;
  margin: 0 20px;
  box-shadow: 0 2px 16px rgba(0, 0, 0, 0.1);
}

.menu-item {
  width: 100%;
  height: 60px;
  display: flex;
  align-items: center;
  padding: 0 20px;
  border-bottom: 1px solid #f5f5f5;
  transition: background-color 0.2s ease;
}

.menu-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 28px;
  height: 28px;
  margin-right: 16px;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  font-size: 16px;
  font-family: SF Pro;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.90);
}

.menu-arrow {
  width: 16px;
  height: 16px;
  opacity: 0.3;
}

/* 注销账户特殊样式 */
.cancel-item {
  margin-top: 20px;
}

.cancel-text {
  color: #FF4444;
}

/* 分割线 */
.section-divider {
  width: 100%;
  height: 10px;
  background: #f5f5f5;
  margin: 10px 0;
}