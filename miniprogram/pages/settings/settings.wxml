<!-- 设置页面 -->
<view class="settings-container">
  <t-cell-group theme="card">
    <t-cell title="隐私政策" arrow hover bindtap="handleMenuClick" data-type="privacy-policy" />
    <t-cell title="服务协议" arrow hover bindtap="handleMenuClick" data-type="service-agreement" />
    <t-cell title="数据收集清单" arrow hover bindtap="handleMenuClick" data-type="data-collection" />
    <t-cell title="个人信息清单" arrow hover bindtap="handleMenuClick" data-type="personal-info" />
  </t-cell-group>

  <view class="logout-section">
    <t-cell-group theme="card">
      <t-cell title="退出登录" t-class="logout-cell" t-class-title="logout-text" bindtap="handleLogout" />
    </t-cell-group>
  </view>

  <view class="danger-section">
    <t-cell-group theme="card">
      <t-cell title="注销账户" t-class-title="danger-text" arrow hover bindtap="handleMenuClick" data-type="cancel-account" />
    </t-cell-group>
  </view>
</view>