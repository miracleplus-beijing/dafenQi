/* 分类详情页面样式 - iOS 风格 */

/* CSS 变量定义 - 复用 iOS 风格色彩系统 */
page {
  /* 背景色 */
  --bg-primary: #f8f9fa;
  --bg-card: rgba(255, 255, 255, 0.8);
  --bg-card-solid: rgba(255, 255, 255, 0.95);

  /* 文字色彩 */
  --text-primary: rgba(30, 41, 59, 0.9);
  --text-secondary: rgba(100, 116, 139, 0.8);
  --text-muted: rgba(148, 163, 184, 0.7);

  /* iOS风格阴影 */
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.04);
  --shadow-md: 0 2px 6px rgba(0, 0, 0, 0.06);

  /* 圆角 */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 14px;
  --radius-xl: 16px;

  /* iOS动画 */
  --ease: cubic-bezier(0.4, 0, 0.2, 1);

  background-color: var(--bg-primary);
}

.category-detail-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--bg-primary);
  overflow: hidden;
}

/* 头部导航栏 - iOS 风格优化 */
.header {
  position: relative;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.04);
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 16px;
  height: 52px;
}

.back-btn,
.sort-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.04);
  transition: all 0.2s var(--ease);
}

.back-btn:active,
.sort-btn:active {
  background-color: rgba(0, 0, 0, 0.08);
  transform: scale(0.96);
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: -0.3px;
}

.header-actions {
  display: flex;
  gap: 8px;
}

/* 排序菜单 - iOS 风格优化 */
.sort-menu {
  position: fixed;
  top: 52px;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0);
  z-index: 99;
  visibility: hidden;
  transition: all 0.2s var(--ease);
}

.sort-menu.show {
  background-color: rgba(0, 0, 0, 0.2);
  visibility: visible;
}

.sort-menu-content {
  position: absolute;
  top: 0;
  right: 0;
  width: 180px;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: var(--radius-lg);
  margin: 8px;
  box-shadow: var(--shadow-md);
  border: 0.5px solid rgba(0, 0, 0, 0.04);
  transform: scale(0.9);
  opacity: 0;
  transform-origin: top right;
  transition: all 0.2s var(--ease);
}

.sort-menu.show .sort-menu-content {
  transform: scale(1);
  opacity: 1;
}

.sort-menu-title {
  padding: 12px 14px;
  font-size: 13px;
  font-weight: 600;
  color: var(--text-primary);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.04);
}

.sort-options {
  padding: 4px 0;
}

.sort-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 14px;
  color: var(--text-secondary);
  transition: all 0.2s var(--ease);
}

.sort-option:active {
  background-color: rgba(0, 0, 0, 0.04);
}

.sort-option.active {
  color: #0884ff;
  font-weight: 600;
}

.option-label {
  font-size: 14px;
}

.option-check {
  display: flex;
  align-items: center;
  color: #0884ff;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  background-color: var(--bg-primary);
}

/* 分类信息 - 艺术化大标题展示 */
.category-hero {
  position: relative;
  margin: 12px 16px 20px;
  min-height: 160px;
  border-radius: var(--radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.05) 50%,
    rgba(0, 0, 0, 0.08) 100%
  );
  z-index: 2;
}

.hero-content {
  position: relative;
  z-index: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 160px;
  padding: 32px 24px;
  text-align: center;
}

.hero-title {
  font-size: 32px;
  font-weight: 800;
  letter-spacing: -1px;
  line-height: 1.2;
  color: rgba(30, 41, 59, 0.95);
  margin-bottom: 8px;
  text-shadow: 0 1px 2px rgba(255, 255, 255, 0.5);
}

.hero-subtitle {
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.5px;
  color: rgba(100, 116, 139, 0.75);
  text-transform: uppercase;
  margin-bottom: 16px;
}

.hero-stats {
  display: flex;
  gap: 24px;
  margin-top: 8px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.stat-number {
  font-size: 24px;
  font-weight: 700;
  color: rgba(30, 41, 59, 0.9);
  letter-spacing: -0.5px;
}

.stat-label {
  font-size: 12px;
  font-weight: 500;
  color: rgba(100, 116, 139, 0.7);
  letter-spacing: 0.3px;
}

/* 播客列表 - iOS 风格优化 */
.podcasts-list {
  padding: 0 16px 80px 16px;
}

.podcast-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 10px;
  margin-bottom: 10px;
  background-color: var(--bg-card);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-xs);
  border: 0.5px solid rgba(0, 0, 0, 0.03);
  transition: all 0.2s var(--ease);
}

.podcast-item:active {
  background-color: rgba(255, 255, 255, 0.95);
  transform: scale(0.99);
  box-shadow: var(--shadow-sm);
}

.podcast-cover {
  position: relative;
  width: 70px;
  height: 70px;
  border-radius: var(--radius-sm);
  overflow: hidden;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.duration-badge {
  position: absolute;
  bottom: 4px;
  right: 4px;
  background-color: rgba(0, 0, 0, 0.65);
  color: #ffffff;
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 4px;
  font-weight: 500;
}

.podcast-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
  min-width: 0;
}

.podcast-title {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.podcast-channel {
  font-size: 12px;
  color: var(--text-muted);
}

.podcast-meta {
  display: flex;
  gap: 10px;
  font-size: 11px;
  color: var(--text-muted);
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 3px;
}

.date {
  font-size: 11px;
}

.podcast-action {
  display: flex;
  align-items: center;
  color: rgba(0, 0, 0, 0.2);
  flex-shrink: 0;
}

/* 空状态 - iOS 风格优化 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400px;
  gap: 10px;
}

.empty-icon {
  font-size: 42px;
  color: rgba(0, 0, 0, 0.15);
  opacity: 0.6;
}

.empty-text {
  font-size: 15px;
  font-weight: 500;
  color: var(--text-primary);
}

.empty-hint {
  font-size: 13px;
  color: var(--text-muted);
}

/* 加载更多提示 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  gap: 8px;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  font-size: 12px;
  color: var(--text-muted);
}

/* 分享按钮 - iOS 风格优化 */
.share-btn {
  position: fixed;
  bottom: 20px;
  right: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
  padding: 10px 16px;
  min-width: 52px;
  height: 40px;
  background: linear-gradient(135deg, #0884ff 0%, #3b9eff 100%);
  border: none;
  border-radius: 20px;
  box-shadow: 0 3px 10px rgba(8, 132, 255, 0.25);
  color: #ffffff;
  font-size: 13px;
  font-weight: 500;
  transition: all 0.2s var(--ease);
  z-index: 50;
}

.share-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2px 6px rgba(8, 132, 255, 0.2);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .category-card {
    padding: 16px;
  }

  .category-name {
    font-size: 20px;
  }

  .podcast-item {
    gap: 10px;
    padding: 10px;
  }

  .podcast-cover {
    width: 64px;
    height: 64px;
  }

  .podcast-title {
    font-size: 13px;
  }
}
