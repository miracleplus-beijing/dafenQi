/* 分类详情页面 - 磨砂纸质感设计（Frosted Paper Theme） */

/* === 1. 全局样式和变量定义 === */
page {
  /* 背景色 - 米白纸张色 */
  --bg-paper: #Fdfbf7;
  --bg-white: rgba(255, 255, 255, 0.85);
  --bg-white-solid: rgba(255, 255, 255, 0.95);

  /* 品牌色 - 奇绩蓝 */
  --theme-blue: rgb(8, 132, 255);
  --theme-blue-light: rgba(8, 132, 255, 0.1);
  --theme-blue-shadow: rgba(8, 132, 255, 0.05);

  /* 文字色彩 */
  --text-primary: #1a1a1a;
  --text-secondary: #666666;
  --text-muted: #a3a3a3;

  /* 圆角系统 */
  --radius-sm: 10px;
  --radius-md: 16px;
  --radius-lg: 20px;
  --radius-xl: 32px;

  /* 动画曲线 */
  --ease-out: cubic-bezier(0.25, 0.8, 0.25, 1);

  background-color: var(--bg-paper);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  overflow-x: hidden;
}

/* === 2. 容器和布局 === */
.category-detail-container {
  position: relative;
  min-height: 100vh;
  background-color: var(--bg-paper);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 纸张纹理背景 */
.bg-paper-pattern {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(#a3a3a3 0.5px, transparent 0.5px),
    radial-gradient(#a3a3a3 0.5px, #Fdfbf7 0.5px);
  background-size: 20px 20px;
  background-position: 0 0, 10px 10px;
  opacity: 0.6;
  pointer-events: none;
  z-index: 0;
}

/* 背景装饰 - 蓝色渐变球 */
.bg-decoration-1 {
  position: fixed;
  top: -10%;
  right: -20%;
  width: 384px;
  height: 384px;
  background: rgba(8, 132, 255, 0.15);
  border-radius: 50%;
  filter: blur(80px);
  opacity: 0.7;
  animation: pulse 4s ease-in-out infinite;
  pointer-events: none;
  z-index: 1;
}

.bg-decoration-2 {
  position: fixed;
  bottom: 10%;
  left: -10%;
  width: 256px;
  height: 256px;
  background: rgba(100, 200, 255, 0.2);
  border-radius: 50%;
  filter: blur(60px);
  opacity: 0.5;
  pointer-events: none;
  z-index: 1;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.7;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.1);
  }
}

/* === 3. 磨砂纸质感核心类 === */
.frosted-paper {
  background-color: rgba(253, 251, 247, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 0.5px solid rgba(8, 132, 255, 0.08);
  box-shadow:
    0 4px 20px -2px rgba(8, 132, 255, 0.05),
    inset 0 0 0 1px rgba(255, 255, 255, 0.6);
}

/* === 4. 加载状态 === */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16px;
  background-color: var(--bg-paper);
  z-index: 1000;
}

.loading-text {
  font-size: 14px;
  font-weight: 500;
  color: var(--text-secondary);
  letter-spacing: 0.5px;
}

/* === 5. 内容区域 === */
.content-wrapper {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  z-index: 10;
}

/* === 6. 自定义导航栏 === */
.custom-navbar {
  position: sticky;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  height: 56px;
  z-index: 100;
  border-radius: 0 0 var(--radius-lg) var(--radius-lg);
}

.navbar-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.6);
  transition: all 0.2s var(--ease-out);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.navbar-btn:active {
  background-color: rgba(255, 255, 255, 0.9);
  transform: scale(0.95);
}

.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: -0.3px;
  padding: 0 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* === 7. 排序菜单 === */
.sort-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 200;
  animation: fadeIn 0.2s var(--ease-out);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.sort-menu {
  position: fixed;
  top: 70px;
  right: 16px;
  width: 180px;
  border-radius: var(--radius-md);
  z-index: 201;
  animation: slideInDown 0.2s var(--ease-out);
  box-shadow: 0 8px 24px rgba(8, 132, 255, 0.12);
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.sort-menu-title {
  padding: 14px 16px 10px;
  font-size: 12px;
  font-weight: 600;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 1px;
  border-bottom: 0.5px solid rgba(8, 132, 255, 0.08);
}

.sort-options {
  padding: 6px 0;
}

.sort-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  transition: all 0.2s var(--ease-out);
}

.sort-option:active {
  background-color: rgba(8, 132, 255, 0.05);
}

.sort-option.active {
  background-color: rgba(8, 132, 255, 0.08);
}

.option-label {
  font-size: 14px;
  font-weight: 500;
  color: var(--text-primary);
}

.sort-option.active .option-label {
  font-weight: 600;
  color: var(--theme-blue);
}

.option-check {
  display: flex;
  align-items: center;
}

/* === 8. 主内容滚动区域 === */
.main-content {
  flex: 1;
  height: 100vh;
  padding: 8px 16px 0;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

/* === 9. 分类信息 Hero 区域 === */
.category-hero {
  position: relative;
  width: 100%;
  height: 192px;
  border-radius: var(--radius-xl);
  overflow: hidden;
  margin-bottom: 24px;
  box-shadow: 0 4px 20px rgba(8, 132, 255, 0.15);
}

/* 动态渐变背景 */
.hero-gradient {
  position: absolute;
  inset: 0;
  background-size: 200% 200%;
  animation: gradientFlow 15s ease infinite;
  opacity: 0.9;
  z-index: 1;
}

@keyframes gradientFlow {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* 磨砂纹理叠加 */
.hero-texture {
  position: absolute;
  inset: 0;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" /></filter><rect width="100" height="100" filter="url(%23noise)" opacity="0.3" /></svg>');
  opacity: 0.2;
  mix-blend-mode: overlay;
  z-index: 2;
}

/* 内容层 */
.hero-content-layer {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 100%;
  padding: 24px;
  overflow: hidden;
}

.hero-badge {
  display: inline-block;
  width: fit-content;
  padding: 4px 10px;
  background-color: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-radius: 8px;
  font-size: 10px;
  font-weight: 700;
  color: #0c4a6e;
  letter-spacing: 1.5px;
  border: 0.5px solid rgba(255, 255, 255, 0.2);
  margin-bottom: 8px;
}

.hero-title {
  font-size: 28px;
  font-weight: 700;
  color: #0c4a6e;
  line-height: 1.2;
  letter-spacing: -0.5px;
  margin-bottom: 8px;
  text-shadow: 0 1px 2px rgba(255, 255, 255, 0.3);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.hero-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4px;
  gap: 8px;
  overflow: hidden;
}

.hero-subtitle {
  font-size: 12px;
  font-weight: 500;
  color: #075985;
  opacity: 0.8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  min-width: 0;
}

.hero-stats-badge {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  background-color: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-radius: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
  white-space: nowrap;
}

.stats-number {
  font-size: 14px;
  font-weight: 700;
  color: #0c4a6e;
}

.stats-label {
  font-size: 10px;
  font-weight: 400;
  color: #075985;
  opacity: 0.7;
}

/* 装饰图标 */
.hero-decoration-icon {
  position: absolute;
  top: -10px;
  right: -20px;
  font-size: 120px;
  opacity: 0.2;
  transform: rotate(12deg);
  z-index: 3;
  transition: transform 0.7s var(--ease-out);
}

.category-hero:active .hero-decoration-icon {
  transform: rotate(0deg);
}

/* === 10. 播客列表 === */
.podcasts-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* 播客卡片 */
.podcast-item-card {
  display: flex;
  gap: 16px;
  padding: 12px;
  background: white;
  border-radius: var(--radius-lg);
  border: 0.5px solid rgba(0, 0, 0, 0.03);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.02);
  transition: all 0.2s var(--ease-out);
}

.podcast-item-card:active {
  transform: scale(0.98);
  background-color: #fafafa;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
}

/* 封面区域 */
.podcast-cover-wrapper {
  position: relative;
  width: 80px;
  height: 80px;
  flex-shrink: 0;
  border-radius: 12px;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.05);
}

.podcast-cover-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.duration-badge-new {
  position: absolute;
  bottom: 4px;
  right: 4px;
  padding: 3px 6px;
  background-color: rgba(0, 0, 0, 0.65);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  color: white;
  font-size: 10px;
  font-weight: 500;
  border-radius: 6px;
  font-family: 'SF Mono', 'Consolas', monospace;
}

/* 播放遮罩 */
.play-overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s var(--ease-out);
  border-radius: 12px;
}

.podcast-item-card:active .play-overlay {
  opacity: 1;
}

.play-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  padding-left: 2px;
}

/* 信息区域 */
.podcast-info-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 3px;
  min-width: 0;
  overflow: hidden;
}

.podcast-title-new {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  margin-bottom: 1px;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.podcast-channel-new {
  font-size: 11px;
  color: var(--text-secondary);
  margin-bottom: 4px;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

/* Meta信息 */
.podcast-meta-new {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 9px;
  color: var(--text-muted);
  flex-wrap: nowrap;
  overflow: hidden;
}

.meta-item-new {
  display: flex;
  align-items: center;
  gap: 3px;
  flex-shrink: 0;
  white-space: nowrap;
}

.meta-item-new text {
  font-size: 9px;
  line-height: 1;
}

.meta-date {
  margin-left: auto;
  font-family: 'SF Mono', 'Consolas', monospace;
  font-size: 9px;
  flex-shrink: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Action图标 */
.podcast-action-new {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  flex-shrink: 0;
}

/* === 11. 空状态 === */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300px;
  gap: 12px;
  opacity: 0.6;
}

.empty-icon {
  font-size: 56px;
  margin-bottom: 8px;
}

.empty-text {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-primary);
}

.empty-hint {
  font-size: 13px;
  color: var(--text-muted);
}

/* === 12. 加载更多状态 === */
.loading-more-new {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 24px 0;
  opacity: 0.6;
}

.loading-dot {
  width: 6px;
  height: 6px;
  background-color: var(--text-muted);
  border-radius: 50%;
  animation: bounce 1.2s ease-in-out infinite;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.1s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.2s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}

.loading-more-text {
  font-size: 12px;
  color: var(--text-secondary);
  font-family: 'SF Mono', 'Consolas', monospace;
  margin-left: 8px;
}

.no-more-new {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24px 0;
  font-size: 12px;
  color: var(--text-muted);
}

/* === 13. 底部占位 === */
.bottom-spacer {
  height: 32px;
}

/* === 14. 分享浮动按钮 === */
.share-floating-btn {
  position: fixed;
  bottom: 32px;
  right: 24px;
  width: 56px;
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border: 0.5px solid rgba(8, 132, 255, 0.1);
  border-radius: 50%;
  box-shadow:
    0 8px 20px -5px rgba(8, 132, 255, 0.4),
    0 0 0 1px rgba(255, 255, 255, 0.6) inset;
  z-index: 100;
  transition: all 0.2s var(--ease-out);
}

.share-floating-btn::after {
  border: none;
}

.share-floating-btn:active {
  transform: scale(0.95);
  box-shadow:
    0 4px 12px -3px rgba(8, 132, 255, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.6) inset;
}

/* === 15. 响应式设计 === */
@media (max-width: 375px) {
  .category-hero {
    height: 160px;
  }

  .hero-title {
    font-size: 24px;
  }

  .podcast-cover-wrapper {
    width: 70px;
    height: 70px;
  }

  .podcast-title-new {
    font-size: 13px;
  }

  .share-floating-btn {
    width: 52px;
    height: 52px;
    bottom: 24px;
    right: 20px;
  }
}
