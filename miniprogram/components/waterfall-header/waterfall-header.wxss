/* 瀑布流头部组件 - Frosted Paper Theme */

/* ========== 主题色变量 ========== */
page {
  --theme-blue: rgb(8, 132, 255);
  --theme-blue-light: rgba(8, 132, 255, 0.1);
  --bg-paper: #Fdfbf7;
  --text-primary: #1a1a1a;
  --text-secondary: #4a5568;
  --text-tertiary: #9ca3af;
}

/* ========== 头部容器 (Sticky) ========== */
.waterfall-header {
  position: sticky;
  top: 0;
  z-index: 100;
  padding-top: calc(env(safe-area-inset-top) + 16rpx);
  padding-bottom: 16rpx;
}

.frosted-paper-header {
  background-color: rgba(253, 251, 247, 0.85);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border-bottom: 1rpx solid rgba(8, 132, 255, 0.08);
  box-shadow:
    0 8rpx 32rpx -8rpx rgba(8, 132, 255, 0.06),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.6);
}

/* ========== 搜索栏 ========== */
.search-wrapper {
  padding: 16rpx 32rpx;
}

.frosted-glass-search {
  background: transparent;
}

.search-inner {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(8, 132, 255, 0.08);
  border-radius: 48rpx;
  transition: all 0.3s ease;
  box-shadow:
    0 4rpx 16rpx rgba(8, 132, 255, 0.04),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.8);
}

.search-inner:focus-within {
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(8, 132, 255, 0.3);
  box-shadow:
    0 8rpx 24rpx rgba(8, 132, 255, 0.12),
    inset 0 0 0 1rpx rgba(255, 255, 255, 1);
}

.search-icon {
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
  outline: none;
}

.search-placeholder {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

.clear-icon {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background 0.2s ease;
}

.clear-icon:active {
  background: rgba(156, 163, 175, 0.15);
}

/* ========== 筛选标签 (水平滚动) ========== */
.filter-tags-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 0 24rpx 8rpx;
}

/* 隐藏滚动条 */
.filter-tags-scroll::-webkit-scrollbar {
  display: none;
}

.filter-tags-container {
  display: inline-flex;
  gap: 16rpx;
  padding: 0 8rpx;
}

/* 单个标签 */
.filter-tag {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 1rpx solid rgba(156, 163, 175, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.filter-tag:active {
  transform: scale(0.95);
}

/* 激活状态 */
.filter-tag.active {
  background: var(--theme-blue);
  border-color: var(--theme-blue);
  box-shadow:
    0 8rpx 24rpx rgba(8, 132, 255, 0.3),
    0 2rpx 8rpx rgba(8, 132, 255, 0.2);
}

.tag-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-secondary);
  white-space: nowrap;
  letter-spacing: 0.5rpx;
}

.filter-tag.active .tag-label {
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* ========== 下拉面板遮罩 ========== */
.dropdown-overlay {
  position: fixed;
  inset: 0;
  z-index: 150;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(4rpx);
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* ========== 下拉选项面板 ========== */
.dropdown-panel {
  position: fixed;
  top: 280rpx; /* 根据header高度调整 */
  left: 32rpx;
  right: 32rpx;
  max-height: 60vh;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideDown 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  z-index: 200;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.frosted-glass-panel {
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(8, 132, 255, 0.1);
  box-shadow:
    0 16rpx 48rpx rgba(8, 132, 255, 0.12),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.8);
}

/* ========== 选项滚动区域 ========== */
.option-scroll {
  max-height: 60vh;
  padding: 16rpx 0;
}

/* ========== 选项项 ========== */
.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  margin: 0 16rpx;
  border-radius: 16rpx;
  transition: all 0.2s ease;
  position: relative;
}

.option-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 0;
  background: linear-gradient(180deg, var(--theme-blue) 0%, #005BB5 100%);
  border-radius: 0 3rpx 3rpx 0;
  transition: height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.option-item:active {
  background: rgba(8, 132, 255, 0.06);
  transform: scale(0.98);
}

/* 已选择的选项 */
.option-item.selected {
  background: rgba(8, 132, 255, 0.1);
}

.option-item.selected::before {
  height: 60%;
}

.option-label {
  font-size: 30rpx;
  color: var(--text-primary);
  flex: 1;
  letter-spacing: 0.5rpx;
  font-weight: 500;
}

.option-item.selected .option-label {
  color: var(--theme-blue);
  font-weight: 600;
}

/* 选中图标动画 */
.option-item.selected t-icon {
  animation: checkBounce 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes checkBounce {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* ========== 响应式适配 ========== */
@media (max-width: 375px) {
  .search-wrapper {
    padding: 12rpx 24rpx;
  }

  .search-inner {
    padding: 12rpx 20rpx;
  }

  .filter-tags-scroll {
    padding: 0 20rpx 6rpx;
  }

  .filter-tags-container {
    gap: 12rpx;
  }

  .filter-tag {
    padding: 12rpx 24rpx;
  }

  .tag-label {
    font-size: 22rpx;
  }

  .dropdown-panel {
    left: 24rpx;
    right: 24rpx;
    border-radius: 20rpx;
  }

  .option-item {
    padding: 24rpx 28rpx;
    margin: 0 12rpx;
  }

  .option-label {
    font-size: 28rpx;
  }
}

/* ========== 渐入动画（选项列表） ========== */
.option-item {
  animation: optionFadeIn 0.3s ease-out backwards;
}

.option-item:nth-child(1) { animation-delay: 0.05s; }
.option-item:nth-child(2) { animation-delay: 0.1s; }
.option-item:nth-child(3) { animation-delay: 0.15s; }
.option-item:nth-child(4) { animation-delay: 0.2s; }
.option-item:nth-child(5) { animation-delay: 0.25s; }
.option-item:nth-child(6) { animation-delay: 0.3s; }
.option-item:nth-child(7) { animation-delay: 0.35s; }

@keyframes optionFadeIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}
