/* 排行榜列表组件样式 */

.ranking-list {
  background: var(--bg-card, rgba(255, 255, 255, 0.9));
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: var(--radius-xl, 20rpx);
  padding: var(--space-lg, 24rpx);
  box-shadow: var(--shadow-glass, 0 8px 32px 0 rgba(31, 38, 135, 0.1));
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

/* 排行榜头部 */
.ranking-list__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-md, 16rpx);
  padding-bottom: var(--space-sm, 8rpx);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.ranking-list__title-wrapper {
  display: flex;
  align-items: center;
  gap: var(--space-sm, 8rpx);
}

.ranking-list__icon {
  font-size: 40rpx !important;
  margin-right: var(--space-sm, 8rpx);
}

/* 图标颜色样式 */
.icon-hot { color: #ff6b6b; }
.icon-new { color: #4ecdc4; }
.icon-review { color: #ffe66d; }
.icon-default { color: var(--text-secondary, rgba(100, 116, 139, 0.8)); }

.ranking-list__title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary, rgba(30, 41, 59, 0.9));
  flex: 1;
}

.ranking-list__more-btn {
  padding: var(--space-xs, 4rpx);
  border-radius: var(--radius-sm, 8rpx);
  transition: all 0.2s ease;
}

.ranking-list__more-btn:active {
  background: rgba(0, 0, 0, 0.05);
}

.ranking-list__more-icon {
  font-size: 32rpx !important;
  color: var(--text-muted, rgba(148, 163, 184, 0.7));
}

/* 排行榜内容 */
.ranking-list__content {
  min-height: 200rpx;
}

.ranking-list__items {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm, 8rpx);
}

/* 排行榜项目 */
.ranking-item {
  display: flex;
  align-items: center;
  padding: var(--space-sm, 8rpx);
  border-radius: var(--radius-md, 12rpx);
  transition: all 0.2s ease;
  position: relative;
}

.ranking-item:active {
  background: rgba(255, 255, 255, 0.5);
  transform: scale(0.98);
}

/* 排名数字 */
.ranking-item__rank {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--bg-glass, rgba(255, 255, 255, 0.7));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-secondary, rgba(100, 116, 139, 0.8));
  margin-right: var(--space-md, 16rpx);
  flex-shrink: 0;
}

/* 前三名特殊样式 */
.ranking-item--first .ranking-item__rank {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  color: #b8860b;
  box-shadow: 0 2px 8px rgba(255, 215, 0, 0.3);
}

.ranking-item--second .ranking-item__rank {
  background: linear-gradient(135deg, #c0c0c0 0%, #e5e5e5 100%);
  color: #6b6b6b;
  box-shadow: 0 2px 8px rgba(192, 192, 192, 0.3);
}

.ranking-item--third .ranking-item__rank {
  background: linear-gradient(135deg, #cd7f32 0%, #daa765 100%);
  color: #8b4513;
  box-shadow: 0 2px 8px rgba(205, 127, 50, 0.3);
}

/* 内容区域 */
.ranking-item__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  margin-right: var(--space-sm, 8rpx);
}

.ranking-item__title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary, rgba(30, 41, 59, 0.9));
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ranking-item__meta {
  display: flex;
  gap: var(--space-sm, 8rpx);
  margin-top: var(--space-xs, 4rpx);
}

.ranking-item__meta-item {
  font-size: 22rpx;
  color: var(--text-muted, rgba(148, 163, 184, 0.7));
  font-weight: 500;
}

/* 播放按钮 */
.ranking-item__action {
  flex-shrink: 0;
}

.ranking-item__play-icon {
  font-size: 32rpx !important;
  color: var(--text-muted, rgba(148, 163, 184, 0.7));
  opacity: 0.7;
  transition: all 0.2s ease;
}

.ranking-item:active .ranking-item__play-icon {
  opacity: 1;
  color: #667eea;
}

/* 加载状态 */
.ranking-list__loading {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm, 8rpx);
}

.ranking-item--skeleton {
  opacity: 0.7;
}

.ranking-item__rank--skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
}

.ranking-item__content--skeleton {
  width: 100%;
}

.ranking-item__title--skeleton {
  height: 28rpx;
  width: 70%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 空状态 */
.ranking-list__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-2xl, 48rpx);
  text-align: center;
}

.ranking-list__empty-icon {
  font-size: 64rpx !important;
  color: var(--text-muted, rgba(148, 163, 184, 0.7));
  margin-bottom: var(--space-md, 16rpx);
  animation: pulse 2s infinite;
}

.ranking-list__empty-text {
  font-size: 28rpx;
  color: var(--text-muted, rgba(148, 163, 184, 0.7));
  font-weight: 500;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 排行榜类型样式 */
.ranking-list--hot {
  border-left: 4rpx solid #ff6b6b;
}

.ranking-list--new {
  border-left: 4rpx solid #4ecdc4;
}

.ranking-list--review {
  border-left: 4rpx solid #ffe66d;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .ranking-list {
    padding: var(--space-md, 16rpx);
  }

  .ranking-item__rank {
    width: 40rpx;
    height: 40rpx;
    font-size: 22rpx;
  }

  .ranking-item__title {
    font-size: 26rpx;
  }

  .ranking-item__meta-item {
    font-size: 20rpx;
  }

  .ranking-item__play-icon {
    font-size: 28rpx !important;
  }
}