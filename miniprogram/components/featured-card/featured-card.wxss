/* 精选推荐卡片组件样式 */

.featured-card {
  display: flex;
  padding: var(--space-lg, 24rpx);
  background: var(--bg-card, rgba(255, 255, 255, 0.9));
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: var(--radius-xl, 20rpx);
  box-shadow: var(--shadow-glass, 0 8px 32px 0 rgba(31, 38, 135, 0.1));
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.featured-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg, 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05));
}

/* 加载状态 */
.featured-card--loading {
  opacity: 0.8;
}

/* 封面区域 */
.featured-card__cover {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: var(--space-lg, 24rpx);
  border-radius: var(--radius-lg, 16rpx);
  overflow: hidden;
  flex-shrink: 0;
  background: var(--bg-glass, rgba(255, 255, 255, 0.7));
}

/* 封面图片 */
.featured-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: inherit;
}

/* 图片骨架屏 */
.featured-card__image-skeleton {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 默认封面 */
.featured-card__default-cover {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-glass, rgba(255, 255, 255, 0.7));
}

.featured-card__default-icon {
  font-size: 48rpx !important;
  color: var(--text-muted, rgba(148, 163, 184, 0.7));
}

/* 播放覆盖层 */
.featured-card__play-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border-radius: inherit;
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 2;
}

.featured-card__play-overlay.active {
  opacity: 1;
}

/* 播放图标 */
.featured-card__play-icon {
  font-size: 64rpx !important;
  color: white;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

/* 播放状态指示器 */
.featured-card__playing-indicator {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
  z-index: 3;
}

.featured-card__wave-bar {
  width: 6rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 3rpx;
  animation: wave-animation 1.5s infinite ease-in-out;
}

.featured-card__wave-bar:nth-child(1) {
  height: 12rpx;
  animation-delay: 0s;
}

.featured-card__wave-bar:nth-child(2) {
  height: 20rpx;
  animation-delay: 0.2s;
}

.featured-card__wave-bar:nth-child(3) {
  height: 16rpx;
  animation-delay: 0.4s;
}

@keyframes wave-animation {
  0%, 100% { transform: scaleY(0.5); opacity: 0.7; }
  50% { transform: scaleY(1); opacity: 1; }
}

/* 内容区域 */
.featured-card__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

/* 标题 */
.featured-card__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary, rgba(30, 41, 59, 0.9));
  margin-bottom: var(--space-xs, 4rpx);
  line-height: 1.4;
  letter-spacing: -0.01em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 推荐描述 */
.featured-card__description {
  font-size: 28rpx;
  color: var(--text-secondary, rgba(100, 116, 139, 0.8));
  line-height: 1.5;
  margin-bottom: var(--space-sm, 8rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 元信息 */
.featured-card__meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.featured-card__channel,
.featured-card__duration {
  font-size: 24rpx;
  color: var(--text-muted, rgba(148, 163, 184, 0.7));
  font-weight: 500;
}

/* 骨架屏 */
.featured-card__skeleton {
  width: 100%;
}

.featured-card__skeleton-line {
  height: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  margin-bottom: 12rpx;
}

.featured-card__skeleton-line--short {
  width: 60%;
}

.featured-card__skeleton-line--medium {
  width: 80%;
}

.featured-card__skeleton-line--long {
  width: 100%;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .featured-card {
    padding: var(--space-md, 16rpx);
  }

  .featured-card__cover {
    width: 120rpx;
    height: 120rpx;
    margin-right: var(--space-md, 16rpx);
  }

  .featured-card__title {
    font-size: 32rpx;
  }

  .featured-card__description {
    font-size: 26rpx;
  }

  .featured-card__channel,
  .featured-card__duration {
    font-size: 22rpx;
  }

  .featured-card__play-icon {
    font-size: 48rpx !important;
  }
}