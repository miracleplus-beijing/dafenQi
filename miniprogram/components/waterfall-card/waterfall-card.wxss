/* 瀑布流卡片组件样式 */
.waterfall-card {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  position: relative;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  margin-bottom: var(--spacing-md);
}

.waterfall-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.waterfall-card.selected {
  border: 2px solid var(--accent-color);
  box-shadow: 0 0 0 4px rgba(237, 137, 54, 0.1);
}

/* 选择指示器 */
.select-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8rpx);
}

/* 封面区域 */
.card-cover {
  position: relative;
  width: 100%;
  height: 280rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
  transition: transform 0.3s ease;
}

.waterfall-card:active .cover-image {
  transform: scale(1.05);
}

/* 播放状态指示器 */
.play-indicator {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  z-index: 5;
}

.play-waves {
  display: flex;
  gap: 4rpx;
  align-items: end;
  height: 32rpx;
}

.wave {
  width: 6rpx;
  background: var(--accent-color);
  border-radius: 3rpx;
  animation: wave 1.2s ease-in-out infinite;
}

.wave:nth-child(2) {
  animation-delay: 0.1s;
}

.wave:nth-child(3) {
  animation-delay: 0.2s;
}

@keyframes wave {
  0%, 40%, 100% {
    height: 8rpx;
  }
  20% {
    height: 32rpx;
  }
}

/* 时长标识 */
.duration-badge {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  padding: 8rpx 12rpx;
  border-radius: var(--border-radius-sm);
  font-size: var(--font-size-xs);
  backdrop-filter: blur(8rpx);
}

/* 播放悬浮层 */
.play-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.2s ease;
}

.waterfall-card:active .play-overlay {
  opacity: 1;
}

/* 卡片信息区域 */
.card-info {
  padding: var(--spacing-md);
}

.card-title {
  color: var(--text-primary);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: var(--spacing-sm);
}

.channel-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-sm);
}

.channel-name {
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
}

.publish-time {
  color: var(--text-tertiary);
  font-size: var(--font-size-xs);
}

/* 快速操作 */
.quick-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-sm);
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--bg-secondary);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: var(--secondary-dark);
}

.action-btn.favorited {
  background: rgba(237, 137, 54, 0.1);
}