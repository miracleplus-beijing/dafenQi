/* 全局样式 */

page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Times New Roman', 'SF Pro', 'WeChat Sans Std', -apple-system, BlinkMacSystemFont, serif;
  background: #ffffff;
  color: #333;
  line-height: 1.4;
}

view, text, image, button, input, textarea {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 容器样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background: white;
  position: relative;
}

/* 页面切换动画 */
.page-transition {
  transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), opacity 0.3s ease;
}

.page-slide-left {
  transform: translateX(-100%);
  opacity: 0;
}

.page-slide-right {
  transform: translateX(100%);
  opacity: 0;
}

.page-slide-in {
  transform: translateX(0);
  opacity: 1;
}

/* 触摸反馈 */
.touch-feedback {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1000;
}

.swipe-indicator {
  position: absolute;
  top: 50%;
  width: 4px;
  height: 60px;
  background: rgba(8, 132, 255, 0.6);
  border-radius: 2px;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.swipe-indicator.left {
  left: 10px;
}

.swipe-indicator.right {
  right: 10px;
}

.swipe-indicator.active {
  opacity: 1;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.2s ease;
  border: none;
  outline: none;
}

.btn-primary {
  background: #0884FF;
  color: white;
}

.btn-secondary {
  background: #F2F2F7;
  color: rgba(0, 0, 0, 0.9);
}

.btn:active {
  transform: scale(0.95);
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 12px 16px;
  background: #F3F3F3;
  border: none;
  border-radius: 10px;
  font-size: 16px;
  color: rgba(0, 0, 0, 0.9);
}

.input::placeholder {
  color: rgba(0, 0, 0, 0.5);
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin: 8px 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #f8f8f8;
  transition: background-color 0.2s ease;
}

.list-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.list-item:last-child {
  border-bottom: none;
}

/* 图标样式 */
.icon {
  width: 24px;
  height: 24px;
  object-fit: contain;
}

.icon-large {
  width: 48px;
  height: 48px;
}

/* 文本样式 */
.text-primary {
  color: rgba(0, 0, 0, 0.9);
  font-weight: 500;
}

.text-secondary {
  color: rgba(0, 0, 0, 0.5);
  font-size: 14px;
}

.text-link {
  color: #0884FF;
  text-decoration: underline;
}

.text-center {
  text-align: center;
}

/* 间距工具类 */
.mt-8 { margin-top: 8px; }
.mt-16 { margin-top: 16px; }
.mt-24 { margin-top: 24px; }
.mt-32 { margin-top: 32px; }

.mb-8 { margin-bottom: 8px; }
.mb-16 { margin-bottom: 16px; }
.mb-24 { margin-bottom: 24px; }
.mb-32 { margin-bottom: 32px; }

.ml-8 { margin-left: 8px; }
.ml-16 { margin-left: 16px; }

.mr-8 { margin-right: 8px; }
.mr-16 { margin-right: 16px; }

.p-8 { padding: 8px; }
.p-16 { padding: 16px; }
.p-24 { padding: 24px; }

.px-8 { padding-left: 8px; padding-right: 8px; }
.px-16 { padding-left: 16px; padding-right: 16px; }
.px-24 { padding-left: 24px; padding-right: 24px; }

.py-8 { padding-top: 8px; padding-bottom: 8px; }
.py-16 { padding-top: 16px; padding-bottom: 16px; }
.py-24 { padding-top: 24px; padding-bottom: 24px; }

/* 布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.hidden {
  display: none;
}

/* 响应式 */
@media (max-width: 375px) {
  .container {
    padding: 0 16px;
  }
}